{% extends 'base.html.twig' %}

{% block title %}Enrollment Management{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = { darkMode: 'class' }
</script>

<div id="app" class="flex min-h-screen bg-slate-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100">

  <aside id="sidebar"
         class="fixed top-0 left-0 z-50 h-full w-64 bg-slate-800 text-white dark:bg-gray-800 transform -translate-x-full transition-transform duration-300 flex flex-col overflow-y-auto">
    <div class="px-6 py-5 border-b border-slate-700 dark:border-gray-700 flex items-center justify-between">
      <h2 class="text-xl font-semibold tracking-tight">
        {% if is_granted('ROLE_ADMIN') %}
          CompileX Admin
        {% elseif is_granted('ROLE_INSTRUCTOR') %}
          CompileX Instructor
        {% else %}
          CompileX
        {% endif %}
      </h2>
      <button class="text-2xl md:text-3xl focus:outline-none" id="sidebar-close">×</button>
    </div>

    <nav class="flex-1 px-4 py-4 space-y-1 text-sm">

      {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_admin') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Admin Dashboard
        </a>
        <a href="{{ path('app_user_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Users
        </a>
        <a href="{{ path('app_course_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Courses
        </a>
        <a href="{{ path('app_subject_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Subjects
        </a>
        <a href="{{ path('app_module_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Modules
        </a>
        <a href="{{ path('app_enrollment_index') }}"
           class="block px-3 py-2 rounded-md font-medium bg-slate-700 dark:bg-gray-700 hover:bg-slate-600 dark:hover:bg-gray-600">
          Enrollments
        </a>
        <a href="{{ path('app_instructor_assignment_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Instructor Assignments
        </a>
        <a href="{{ path('app_instructor_application_admin_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Instructor Applications
        </a>
        <a href="{{ path('app_activity_log_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Activity Logs
        </a>
        <a href="{{ path('app_student_profile_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Students
        </a>

      {% elseif is_granted('ROLE_INSTRUCTOR') %}
        <a href="{{ path('home') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Home
        </a>

        {% if is_granted('ROLE_ADMIN') %}
          <a href="{{ path('app_admin') }}"
             class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
            Admin Dashboard
          </a>
        {% endif %}

        <a href="{{ path('app_instructor_dashboard') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Instructor Dashboard
        </a>

        <div class="mt-4 pt-3 border-t border-slate-700 dark:border-gray-600 text-xs uppercase tracking-wide text-slate-400 dark:text-gray-400">
          Global Lists (View Only)
        </div>

        <a href="{{ path('app_subject_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          All Subjects
        </a>
        <a href="{{ path('app_module_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          All Modules
        </a>
        <a href="{{ path('app_enrollment_index') }}"
           class="block px-3 py-2 rounded-md font-medium bg-slate-700 dark:bg-gray-700 hover:bg-slate-600 dark:hover:bg-gray-600">
          All Enrollments
        </a>
        <a href="{{ path('app_student_profile_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          All Students
        </a>
      {% else %}
        <a href="{{ path('home') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Home
        </a>
        <a href="{{ path('app_student_dashboard') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Student Dashboard
        </a>
      {% endif %}

      <div class="pt-4 border-t border-slate-700 dark:border-gray-600 mt-4 space-y-1">
        <button id="mode-toggle"
                class="mt-2 block w-full text-left px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Toggle Light/Dark Mode
        </button>

        {% if is_granted('ROLE_ADMIN') %}
          <a href="/" class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
            Back to Home
          </a>
        {% endif %}

        <a href="{{ path('app_logout') }}"
           class="block px-3 py-2 rounded-md font-medium text-red-300 hover:bg-red-700/40">
          Logout
        </a>
      </div>
    </nav>
  </aside>

  <div class="flex-1 flex flex-col min-h-screen">
    <header class="fixed top-0 left-0 w-full z-40 bg-slate-800 text-white dark:bg-gray-800 flex items-center justify-between px-6 py-3 shadow-md">
      <h1 class="text-xl font-semibold text-blue-400 dark:text-blue-300 tracking-tight">CompileX</h1>
      <button class="text-2xl md:text-3xl focus:outline-none" aria-label="Toggle menu" id="burger-button">
        <span id="burger-icon">&#9776;</span>
      </button>
    </header>

    <div class="h-16"></div>

    <main id="main-content" class="flex-1 p-6 md:p-8 max-w-6xl mx-auto w-full space-y-6">

      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
        <div class="space-y-1">
          <h1 class="text-3xl font-semibold">Enrollments</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            View student enrollments per subject and course.
            {% if is_granted('ROLE_ADMIN') %}
              You can create, edit, and delete.
            {% else %}
              You can view only.
            {% endif %}
          </p>
        </div>

        <div class="flex flex-wrap gap-2">
          {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_enrollment_new') }}"
               class="inline-flex items-center justify-center px-4 py-2 rounded-xl bg-blue-600 text-white text-sm font-semibold hover:bg-blue-700">
              + New Enrollment
            </a>

            <a href="{{ path('app_enrollment_export', { q: q, status: status }) }}"
               class="inline-flex items-center justify-center px-4 py-2 rounded-xl bg-emerald-600 text-white text-sm font-semibold hover:bg-emerald-700">
              Export CSV
            </a>
          {% endif %}
        </div>
      </div>

      <form method="get"
            class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm p-4">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-3 items-end">
          <div class="md:col-span-7">
            <label class="block text-xs font-semibold text-gray-600 dark:text-gray-300 mb-1">Search</label>
            <input type="text"
                   name="q"
                   value="{{ q }}"
                   placeholder="Search by student email, course, or subject"
                   class="w-full rounded-xl border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-sm focus:ring-indigo-500 focus:border-indigo-500">
          </div>

          <div class="md:col-span-3">
            <label class="block text-xs font-semibold text-gray-600 dark:text-gray-300 mb-1">Status</label>
            <select name="status"
                    class="w-full rounded-xl border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-sm focus:ring-indigo-500 focus:border-indigo-500">
              <option value="all" {{ status == 'all' ? 'selected' : '' }}>All Status</option>
              <option value="Pending" {{ status == 'Pending' ? 'selected' : '' }}>Pending</option>
              <option value="Approved" {{ status == 'Approved' ? 'selected' : '' }}>Approved</option>
              <option value="Rejected" {{ status == 'Rejected' ? 'selected' : '' }}>Rejected</option>
            </select>
          </div>

          <div class="md:col-span-2 flex gap-2">
            <button class="w-full rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-semibold px-4 py-2">
              Apply
            </button>
            <a href="{{ path('app_enrollment_index') }}"
               class="w-full text-center rounded-xl border border-slate-300 dark:border-gray-600 hover:bg-slate-50 dark:hover:bg-gray-900 text-sm font-semibold px-4 py-2">
              Reset
            </a>
          </div>
        </div>
      </form>

      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="rounded-2xl border px-4 py-3 text-sm
                      {% if label == 'success' %}
                        bg-emerald-50 border-emerald-200 text-emerald-800 dark:bg-emerald-900/20 dark:border-emerald-700 dark:text-emerald-200
                      {% elseif label == 'error' %}
                        bg-red-50 border-red-200 text-red-800 dark:bg-red-900/20 dark:border-red-700 dark:text-red-200
                      {% else %}
                        bg-slate-50 border-slate-200 text-slate-800 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-200
                      {% endif %}">
            {{ message }}
          </div>
        {% endfor %}
      {% endfor %}

      <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm overflow-hidden">
        <div class="px-4 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
          <h2 class="text-sm font-semibold text-gray-800 dark:text-gray-100">
            Enrollments ({{ enrollments|length }})
          </h2>
        </div>

        <div class="overflow-x-auto">
          <table class="min-w-full text-sm">
            <thead class="bg-slate-50 dark:bg-gray-900">
              <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                <th class="px-4 py-2">ID</th>
                <th class="px-4 py-2">Student</th>
                <th class="px-4 py-2">Course</th>
                <th class="px-4 py-2">Subject</th>
                <th class="px-4 py-2">Status</th>
                <th class="px-4 py-2">Actions</th>
              </tr>
            </thead>

            <tbody>
            {% for enrollment in enrollments %}
              {% set studentProfile = enrollment.studentProfile ?? null %}
              {% set studentUser    = studentProfile and studentProfile.user is defined ? studentProfile.user : null %}
              {% set subject        = enrollment.subject ?? null %}
              {% set course         = subject and subject.course is defined ? subject.course : null %}

              {% set courseName  = course and course.name is defined ? course.name : '—' %}
              {% set courseShort = courseName|length > 35 ? courseName|slice(0,35) ~ '…' : courseName %}

              {% set subjectName  = subject and subject.name is defined ? subject.name : '—' %}
              {% set subjectShort = subjectName|length > 35 ? subjectName|slice(0,35) ~ '…' : subjectName %}

              {% set st = enrollment.status ?? '—' %}
              {% set badge = {
                'Approved': 'bg-emerald-100 text-emerald-700 dark:bg-emerald-900 dark:text-emerald-300',
                'Pending':  'bg-amber-100 text-amber-700 dark:bg-amber-900 dark:text-amber-300',
                'Rejected': 'bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300'
              }[st] ?? 'bg-slate-100 text-slate-700 dark:bg-gray-700 dark:text-gray-300' %}

              <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                <td class="px-4 py-2 text-xs">{{ enrollment.id }}</td>

                <td class="px-4 py-2 text-xs">
                  {% if studentUser and studentUser.email is defined %}
                    {{ studentUser.email }}
                  {% else %}
                    —
                  {% endif %}
                </td>

                <td class="px-4 py-2 text-xs">
                  <span title="{{ courseName }}">{{ courseShort }}</span>
                </td>

                <td class="px-4 py-2 text-xs">
                  <span title="{{ subjectName }}">{{ subjectShort }}</span>
                </td>

                <td class="px-4 py-2 text-xs">
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-semibold {{ badge }}">
                    {{ st }}
                  </span>
                </td>

                <td class="px-4 py-2 text-xs space-x-1 whitespace-nowrap">
                  <a href="{{ path('app_enrollment_show', {'id': enrollment.id}) }}"
                     class="inline-flex items-center px-2.5 py-1 rounded-lg bg-blue-600 text-white hover:bg-blue-700 text-[11px] font-semibold">
                    Show
                  </a>

                  {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_enrollment_edit', {'id': enrollment.id}) }}"
                       class="inline-flex items-center px-2.5 py-1 rounded-lg bg-amber-500 text-white hover:bg-amber-600 text-[11px] font-semibold">
                      Edit
                    </a>

                    <form method="post"
                          action="{{ path('app_enrollment_delete', {'id': enrollment.id}) }}"
                          class="inline"
                          onsubmit="return confirm('Delete this enrollment?');">
                      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ enrollment.id) }}">
                      <button type="submit"
                              class="inline-flex items-center px-2.5 py-1 rounded-lg bg-red-600 text-white hover:bg-red-700 text-[11px] font-semibold">
                        Delete
                      </button>
                    </form>
                  {% else %}
                    <span class="inline-flex items-center px-2.5 py-1 rounded-lg border border-slate-300 dark:border-gray-600 text-[11px] font-semibold text-slate-500 dark:text-gray-300 cursor-not-allowed">
                      View only
                    </span>
                  {% endif %}
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="6" class="px-4 py-6 text-center text-sm text-gray-500 dark:text-gray-400">
                  No enrollments found
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>

    </main>
  </div>
</div>

<script>
const sidebar = document.getElementById('sidebar');
const burgerButton = document.getElementById('burger-button');
const burgerIcon = document.getElementById('burger-icon');
const sidebarClose = document.getElementById('sidebar-close');

function openSidebar() {
  sidebar.classList.remove('-translate-x-full');
  if (burgerIcon) burgerIcon.innerHTML = '&times;';
}
function closeSidebar() {
  sidebar.classList.add('-translate-x-full');
  if (burgerIcon) burgerIcon.innerHTML = '&#9776;';
}
function toggleSidebar() {
  if (sidebar.classList.contains('-translate-x-full')) openSidebar();
  else closeSidebar();
}

closeSidebar();

if (burgerButton) {
  burgerButton.addEventListener('click', (e) => {
    e.stopPropagation();
    toggleSidebar();
  });
}
if (sidebarClose) {
  sidebarClose.addEventListener('click', (e) => {
    e.stopPropagation();
    closeSidebar();
  });
}

document.addEventListener('click', (e) => {
  const clickedBurger = e.target.closest('#burger-button');
  const clickedInsideSidebar = sidebar.contains(e.target);
  if (!clickedBurger && !clickedInsideSidebar) closeSidebar();
});

document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape') closeSidebar();
});

const DARK_KEY = 'compilex-dark-mode';
const modeToggle = document.getElementById('mode-toggle');

function loadInitialTheme() {
  const saved = localStorage.getItem(DARK_KEY);
  document.documentElement.classList.toggle('dark', saved === 'true');
}
loadInitialTheme();

if (modeToggle) {
  modeToggle.addEventListener('click', (e) => {
    e.stopPropagation();
    const isDark = document.documentElement.classList.contains('dark');
    document.documentElement.classList.toggle('dark', !isDark);
    localStorage.setItem(DARK_KEY, (!isDark).toString());
  });
}
</script>
{% endblock %}
