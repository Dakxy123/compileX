{% extends 'base.html.twig' %}

{% block title %}Edit Enrollment — Admin — CompileX{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen bg-slate-50 text-slate-900 py-8 px-4">
  <div class="max-w-3xl mx-auto space-y-6">
    <div class="flex items-center justify-between gap-2">
      <div>
        <h1 class="text-2xl font-semibold">Edit Enrollment</h1>
        <p class="text-sm text-slate-500">
          Update status, score, grade or remarks for this enrollment.
        </p>
      </div>
      <a href="{{ path('app_enrollment_index') }}"
         class="inline-flex items-center px-3 py-2 text-sm rounded-md border border-slate-300 bg-white hover:bg-slate-100">
        ← Back to list
      </a>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-slate-200 p-6 space-y-4">
      {% include 'enrollment/_form.html.twig' with { form: form } %}

      <div class="border-t border-slate-200 pt-4 mt-2">
        {% include 'enrollment/_delete_form.html.twig' with { enrollment: enrollment } %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
