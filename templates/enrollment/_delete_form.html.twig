<form method="post"
      action="{{ path('app_enrollment_delete', {'id': enrollment.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this enrollment?');"
      class="inline-block">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ enrollment.id) }}">
  <button class="inline-flex items-center px-2 py-1 text-xs rounded-md border border-red-500 text-red-600 hover:bg-red-50"
          type="submit">
    Delete
  </button>
</form>
