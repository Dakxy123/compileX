<form method="post"
      action="{{ path('app_enrollment_delete', {'id': enrollment.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this enrollment?');"
      class="inline-flex">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ enrollment.id) }}">
  <button type="submit"
          class="inline-flex items-center gap-1 px-3 py-1.5 text-xs font-semibold rounded-lg
                 bg-red-500/10 text-red-600 border border-red-500/30
                 hover:bg-red-500/20 hover:text-red-700
                 dark:bg-red-900/30 dark:text-red-300 dark:border-red-700
                 dark:hover:bg-red-900/50">
    Delete
  </button>
</form>
