{{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}

  {% include 'form/_errors_tailwind.html.twig' with { form: form } %}

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="space-y-1">
      {{ form_label(form.studentProfile, null, {
        'label_attr': {'class': 'block text-xs font-semibold uppercase tracking-wide text-slate-600 dark:text-gray-300'}
      }) }}
      {{ form_widget(form.studentProfile, {
        'attr': {
          'class': 'mt-1 block w-full rounded-xl border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 px-3 py-2 text-sm text-slate-900 dark:text-gray-100 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'
        }
      }) }}
      {% if form.studentProfile.vars.help is not empty %}
        <p class="text-[11px] text-slate-500 dark:text-gray-400">{{ form.studentProfile.vars.help }}</p>
      {% endif %}
      {{ form_errors(form.studentProfile) }}
    </div>

    <div class="space-y-1">
      {{ form_label(form.subject, null, {
        'label_attr': {'class': 'block text-xs font-semibold uppercase tracking-wide text-slate-600 dark:text-gray-300'}
      }) }}
      {{ form_widget(form.subject, {
        'attr': {
          'class': 'mt-1 block w-full rounded-xl border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 px-3 py-2 text-sm text-slate-900 dark:text-gray-100 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'
        }
      }) }}
      {% if form.subject.vars.help is not empty %}
        <p class="text-[11px] text-slate-500 dark:text-gray-400">{{ form.subject.vars.help }}</p>
      {% endif %}
      {{ form_errors(form.subject) }}
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="space-y-1">
      {{ form_label(form.status, null, {
        'label_attr': {'class': 'block text-xs font-semibold uppercase tracking-wide text-slate-600 dark:text-gray-300'}
      }) }}
      {{ form_widget(form.status, {
        'attr': {
          'class': 'mt-1 block w-full rounded-xl border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 px-3 py-2 text-sm text-slate-900 dark:text-gray-100 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500'
        }
      }) }}
      {{ form_errors(form.status) }}
    </div>

    <div class="space-y-1">
      {{ form_label(form.score, null, {
        'label_attr': {'class': 'block text-xs font-semibold uppercase tracking-wide text-slate-600 dark:text-gray-300'}
      }) }}
      {{ form_widget(form.score, {
        'attr': {
          'class': 'mt-1 block w-full rounded-xl border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 px-3 py-2 text-sm text-slate-900 dark:text-gray-100 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500',
          'inputmode': 'decimal',
          'placeholder': 'e.g. 95.50'
        }
      }) }}
      <p class="text-[11px] text-slate-500 dark:text-gray-400">Optional. 0–100, decimals allowed.</p>
      {{ form_errors(form.score) }}
    </div>

    <div class="space-y-1">
      {{ form_label(form.grade, null, {
        'label_attr': {'class': 'block text-xs font-semibold uppercase tracking-wide text-slate-600 dark:text-gray-300'}
      }) }}
      {{ form_widget(form.grade, {
        'attr': {
          'class': 'mt-1 block w-full rounded-xl border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 px-3 py-2 text-sm text-slate-900 dark:text-gray-100 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500',
          'placeholder': 'e.g. A, B+, 1.0'
        }
      }) }}
      <p class="text-[11px] text-slate-500 dark:text-gray-400">Optional. e.g. A, B+, 1.0</p>
      {{ form_errors(form.grade) }}
    </div>
  </div>

  <div class="space-y-1">
    {{ form_label(form.remarks, null, {
      'label_attr': {'class': 'block text-xs font-semibold uppercase tracking-wide text-slate-600 dark:text-gray-300'}
    }) }}
    {{ form_widget(form.remarks, {
      'attr': {
        'class': 'mt-1 block w-full rounded-xl border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 px-3 py-2 text-sm text-slate-900 dark:text-gray-100 shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500',
        'rows': 4,
        'placeholder': 'Optional remarks…'
      }
    }) }}
    {{ form_errors(form.remarks) }}
  </div>

  <div class="pt-2 flex flex-wrap justify-between gap-3">
    <a href="{{ path('app_enrollment_index') }}"
       class="inline-flex items-center px-4 py-2 text-sm font-semibold rounded-xl border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-slate-700 dark:text-gray-200 hover:bg-slate-50 dark:hover:bg-gray-800">
      Cancel
    </a>

    <button class="inline-flex items-center px-4 py-2 text-sm font-semibold rounded-xl bg-indigo-600 text-white hover:bg-indigo-700"
            type="submit">
      Save
    </button>
  </div>

{{ form_end(form) }}
