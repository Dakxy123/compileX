{% extends 'base.html.twig' %}

{% block title %}Enrollment Details — Admin{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>

<div class="p-8 max-w-4xl mx-auto">

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-semibold">Enrollment Details</h1>

    {% if is_granted('ROLE_ADMIN') %}
      <a href="{{ path('app_enrollment_edit', {'id': enrollment.id}) }}"
         class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">
        Edit
      </a>
    {% endif %}
  </div>

  <a href="{{ path('app_enrollment_index') }}"
     class="text-blue-600 hover:underline mb-4 block">&larr; Back to list</a>

  {% set studentProfile = enrollment.studentProfile ?? null %}
  {% set studentUser    = studentProfile and studentProfile.user is defined ? studentProfile.user : null %}
  {% set subject        = enrollment.subject ?? null %}
  {% set course         = subject and subject.course is defined ? subject.course : null %}

  <div class="bg-white dark:bg-gray-800 p-6 rounded shadow border border-gray-200 dark:border-gray-700 space-y-4">
    <p><strong>ID:</strong> {{ enrollment.id }}</p>

    <p><strong>Student:</strong>
      {% if studentUser and studentUser.email is defined %}
        {{ studentUser.email }}
      {% else %}
        —
      {% endif %}
    </p>

    <p><strong>Course:</strong>
      {{ course and course.name is defined ? course.name : '—' }}
    </p>

    <p><strong>Subject:</strong>
      {{ subject and subject.name is defined ? subject.name : '—' }}
    </p>

    <p><strong>Status:</strong>
      {% set st = enrollment.status ?? '—' %}
      {% if st == 'Approved' %}
        <span class="px-2 py-1 bg-green-100 text-green-800 rounded text-xs">{{ st }}</span>
      {% elseif st == 'Pending' %}
        <span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded text-xs">{{ st }}</span>
      {% elseif st == 'Rejected' %}
        <span class="px-2 py-1 bg-red-100 text-red-800 rounded text-xs">{{ st }}</span>
      {% else %}
        <span class="px-2 py-1 bg-gray-200 text-gray-800 rounded text-xs">{{ st }}</span>
      {% endif %}
    </p>

    {# Optional: createdAt/updatedAt if you have them #}
    {% if enrollment.createdAt is defined %}
      <p><strong>Created At:</strong> {{ enrollment.createdAt|date('Y-m-d H:i') }}</p>
    {% endif %}
    {% if enrollment.updatedAt is defined %}
      <p><strong>Updated At:</strong> {{ enrollment.updatedAt|date('Y-m-d H:i') }}</p>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
      <div class="pt-4 border-t border-gray-300 dark:border-gray-700">
        {% include 'enrollment/_delete_form.html.twig' %}
      </div>
    {% endif %}
  </div>
</div>
{% endblock %}
