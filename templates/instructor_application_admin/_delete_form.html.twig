<form method="post"
      action="{{ path('app_instructor_application_delete', {id: application.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this application?');"
      class="inline">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ application.id) }}">
  <button class="px-2 py-1 rounded border border-red-500 text-red-600 hover:bg-red-50 text-xs">
    Delete
  </button>
</form>


