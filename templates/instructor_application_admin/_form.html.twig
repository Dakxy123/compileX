{{ form_start(form, { attr: { class: 'space-y-5' } }) }}

  <div class="space-y-4">
    <div>
      {{ form_label(form.reason, 'Application Reason', {
        label_attr: { class: 'block text-sm font-medium text-slate-700 mb-1' }
      }) }}
      {{ form_widget(form.reason, {
        attr: {
          class: 'w-full rounded-md border border-slate-300 px-3 py-2 text-sm bg-slate-50 text-slate-700',
        }
      }) }}
      {{ form_errors(form.reason) }}
      <p class="mt-1 text-xs text-slate-500">
        This text is submitted by the applicant and cannot be changed.
      </p>
    </div>

    <div>
      {{ form_label(form.status, 'Status', {
        label_attr: { class: 'block text-sm font-medium text-slate-700 mb-1' }
      }) }}
      {{ form_widget(form.status, {
        attr: {
          class: 'w-full rounded-md border border-slate-300 px-3 py-2 text-sm bg-white'
        }
      }) }}
      {{ form_errors(form.status) }}
    </div>
  </div>

  <div class="flex items-center justify-between pt-4">
    <div class="text-xs text-slate-500">
      {% if application.applicant %}
        Applicant: <span class="font-medium">{{ application.applicant.email }}</span>
      {% endif %}
      {% if application.createdAt %}
        · Submitted: {{ application.createdAt|date('Y-m-d H:i') }}
      {% endif %}
      {% if application.portfolioFilename %}
        · Portfolio:
        <a href="{{ asset('uploads/portfolios/' ~ application.portfolioFilename) }}"
           class="text-blue-600 hover:underline" target="_blank" rel="noopener">
          View file
        </a>
      {% endif %}
    </div>

    <div class="flex gap-2">
      <button class="inline-flex items-center px-4 py-2 rounded-md text-sm bg-blue-600 text-white hover:bg-blue-700">
        Save changes
      </button>
      <a href="{{ path('app_admin_instructor_application_index') }}"
         class="inline-flex items-center px-3 py-2 rounded-md text-sm border border-slate-300 bg-white hover:bg-slate-100">
        Cancel
      </a>
    </div>
  </div>

{{ form_end(form) }}
