{% extends 'base.html.twig' %}

{% block title %}Instructor Applications — Admin — CompileX{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = { darkMode: 'class' };
</script>

<div id="app" class="flex min-h-screen bg-slate-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100">

  <aside id="sidebar"
         class="fixed top-0 left-0 z-50 h-full w-64 bg-slate-800 text-white dark:bg-gray-800 transform -translate-x-full transition-transform duration-300 flex flex-col">
    <div class="px-6 py-5 border-b border-slate-700 dark:border-gray-700 flex items-center justify-between">
      <h2 class="text-xl font-semibold tracking-tight">CompileX Admin</h2>
      <button class="text-2xl md:text-3xl focus:outline-none" onclick="toggleSidebar()">×</button>
    </div>

    <nav class="flex-1 px-4 py-4 space-y-1">
      <a href="{{ path('app_admin') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Admin Dashboard
      </a>
      <a href="{{ path('app_user_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Users
      </a>
      <a href="{{ path('app_course_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Courses
      </a>
      <a href="{{ path('app_subject_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Subjects
      </a>
      <a href="{{ path('app_module_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Modules
      </a>
      <a href="{{ path('app_enrollment_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Enrollments
      </a>
      <a href="{{ path('app_instructor_assignment_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Instructor Assignments
      </a>
      <a href="{{ path('app_instructor_application_admin_index') }}"
         class="block px-3 py-2 rounded-md font-medium bg-slate-700 dark:bg-gray-700">
        Instructor Applications
      </a>
      <a href="{{ path('app_activity_log_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Activity Logs
      </a>
      <a href="{{ path('app_student_profile_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Students
      </a>

      <div class="pt-4 border-t border-slate-700 dark:border-gray-600">
        <button id="mode-toggle"
                class="mt-4 block w-full text-left px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Toggle Light/Dark Mode
        </button>
        <a href="/" class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Back to Home
        </a>
        <a href="{{ path('app_logout') }}"
           class="block px-3 py-2 rounded-md font-medium text-red-500 hover:bg-red-700">
          Logout
        </a>
      </div>
    </nav>
  </aside>

  <div class="flex-1 flex flex-col min-h-screen">
    <header class="fixed top-0 left-0 w-full z-40 bg-slate-800 text-white dark:bg-gray-800 flex items-center justify-between px-6 py-3 shadow-md">
      <h1 class="text-xl font-semibold text-blue-400 dark:text-blue-300 tracking-tight">
        CompileX
      </h1>
      <button class="text-2xl md:text-3xl focus:outline-none" aria-label="Toggle menu" onclick="toggleSidebar()">
        <span id="burger-icon">&#9776;</span>
      </button>
    </header>

    <div class="h-16"></div>

    <main class="flex-1 p-6 md:p-8 space-y-6 max-w-6xl mx-auto w-full">

      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
        <div>
          <h2 class="text-2xl md:text-3xl font-semibold">Instructor Applications</h2>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            Review student requests to become instructors.
          </p>
        </div>

        <a href="{{ path('app_admin') }}"
           class="inline-flex items-center px-3 py-2 text-sm rounded-md border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 hover:bg-slate-100 dark:hover:bg-gray-800">
          ← Back to Dashboard
        </a>
      </div>

      {# flashes #}
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="rounded-md px-4 py-2 text-sm
                      {% if label == 'success' %}
                        bg-emerald-50 text-emerald-800 border border-emerald-200
                      {% elseif label == 'error' %}
                        bg-red-50 text-red-800 border border-red-200
                      {% else %}
                        bg-slate-50 text-slate-800 border border-slate-200
                      {% endif %}">
            {{ message }}
          </div>
        {% endfor %}
      {% endfor %}

      <form method="get"
            class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-slate-200 dark:border-gray-700 p-4 flex flex-wrap gap-3 items-end">
        <div>
          <label class="block text-xs font-medium text-slate-600 dark:text-gray-300 mb-1">Status</label>
          <select name="status"
                  class="rounded-md border border-slate-300 dark:border-gray-600 px-3 py-2 text-sm bg-white dark:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-300">
            <option value="">All</option>
            <option value="PENDING"  {{ statusFilter == 'PENDING'  ? 'selected' : '' }}>Pending</option>
            <option value="APPROVED" {{ statusFilter == 'APPROVED' ? 'selected' : '' }}>Approved</option>
            <option value="REJECTED" {{ statusFilter == 'REJECTED' ? 'selected' : '' }}>Rejected</option>
          </select>
        </div>

        <div class="flex gap-2">
          <button type="submit"
                  class="inline-flex items-center px-4 py-2 text-sm rounded-md bg-blue-600 text-white hover:bg-blue-700">
            Filter
          </button>
          <a href="{{ path('app_instructor_application_admin_index') }}"
             class="inline-flex items-center px-3 py-2 text-sm rounded-md border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 hover:bg-slate-100 dark:hover:bg-gray-800">
            Reset
          </a>
        </div>
      </form>

      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-slate-200 dark:border-gray-700 overflow-hidden">
        <table class="min-w-full text-sm">
          <thead class="bg-slate-50 dark:bg-gray-900">
            <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
              <th class="px-4 py-2">Applicant</th>
              <th class="px-4 py-2">Status</th>
              <th class="px-4 py-2">Reason</th>
              <th class="px-4 py-2">Submitted</th>
              <th class="px-4 py-2 text-right">Actions</th>
            </tr>
          </thead>
          <tbody>
          {% for a in applications %}
            <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
              <td class="px-4 py-2 text-xs align-top">
                {{ a.applicant ? a.applicant.email : '—' }}
              </td>
              <td class="px-4 py-2 text-xs align-top">
                {% set badgeClasses = {
                  'PENDING':  'bg-amber-100 text-amber-700 dark:bg-amber-900 dark:text-amber-300',
                  'APPROVED': 'bg-emerald-100 text-emerald-700 dark:bg-emerald-900 dark:text-emerald-300',
                  'REJECTED': 'bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300'
                }[a.status] ?? 'bg-slate-100 text-slate-700 dark:bg-gray-700 dark:text-gray-200' %}
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-semibold {{ badgeClasses }}">
                  {{ a.status }}
                </span>
              </td>
              <td class="px-4 py-2 text-xs align-top">
                {% set r = a.reason ?? '' %}
                {{ r|length > 40 ? r|slice(0,40) ~ '…' : r }}
              </td>
              <td class="px-4 py-2 text-xs align-top">
                {{ a.createdAt ? a.createdAt|date('Y-m-d H:i') : '—' }}
              </td>
              <td class="px-4 py-2 text-xs align-top text-right">
                <a href="{{ path('app_instructor_application_admin_show', {id: a.id}) }}"
                   class="inline-flex items-center px-2 py-1 rounded-md border border-slate-300 dark:border-gray-600 hover:bg-slate-100 dark:hover:bg-gray-800">
                  View
                </a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5" class="px-4 py-4 text-center text-xs text-gray-500 dark:text-gray-400">
                No instructor applications found.
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>

    </main>
  </div>
</div>

<script>
const sidebar = document.getElementById('sidebar');
const burgerIcon = document.getElementById('burger-icon');

function toggleSidebar() {
  sidebar.classList.toggle('-translate-x-full');
  burgerIcon.innerHTML = sidebar.classList.contains('-translate-x-full') ? '&#9776;' : '&times;';
}

const DARK_KEY = 'compilex-dark-mode';
const modeToggle = document.getElementById('mode-toggle');
function loadInitialTheme() {
  const saved = localStorage.getItem(DARK_KEY);
  document.documentElement.classList.toggle('dark', saved === 'true');
}
modeToggle.addEventListener('click', e => {
  e.stopPropagation();
  const isDark = document.documentElement.classList.contains('dark');
  document.documentElement.classList.toggle('dark', !isDark);
  localStorage.setItem(DARK_KEY, (!isDark).toString());
});
loadInitialTheme();

document.addEventListener('click', e => {
  if (!sidebar.contains(e.target) &&
      !e.target.closest('button[aria-label="Toggle menu"]') &&
      !sidebar.classList.contains('-translate-x-full')) {
    toggleSidebar();
  }
});
document.addEventListener('keydown', e => {
  if (e.key === 'Escape' && !sidebar.classList.contains('-translate-x-full')) toggleSidebar();
});
</script>
{% endblock %}
