<form method="post"
      action="{{ path('app_instructor_assignment_delete', {id: assignment.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this assignment?');"
      class="inline">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ assignment.id) }}">
  <button class="px-2 py-1 rounded border border-red-200 text-red-600 text-xs hover:bg-red-50">
    Delete
  </button>
</form>
