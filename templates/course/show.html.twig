{% extends 'base.html.twig' %}

{% block title %}Course Details{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>tailwind.config = { darkMode: 'class' };</script>

<div class="min-h-screen flex items-start justify-center bg-slate-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 py-10">
  <div class="w-full max-w-xl bg-white dark:bg-gray-800 rounded-lg shadow p-6">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-2xl font-semibold">Course Details</h1>
      <a href="{{ path('app_course_index') }}" class="text-sm text-blue-500 hover:underline">
        Back to list
      </a>
    </div>

    <table class="min-w-full text-sm border border-gray-200 dark:border-gray-700">
      <tbody>
        <tr>
          <th class="px-4 py-2 border-b border-gray-200 dark:border-gray-700 text-left w-32">ID</th>
          <td class="px-4 py-2 border-b border-gray-200 dark:border-gray-700">{{ course.id }}</td>
        </tr>
        <tr>
          <th class="px-4 py-2 border-b border-gray-200 dark:border-gray-700 text-left">Name</th>
          <td class="px-4 py-2 border-b border-gray-200 dark:border-gray-700">{{ course.name }}</td>
        </tr>
        <tr>
          <th class="px-4 py-2 border-b border-gray-200 dark:border-gray-700 text-left">Description</th>
          <td class="px-4 py-2 border-b border-gray-200 dark:border-gray-700">
            {{ course.description ?: 'â€”' }}
          </td>
        </tr>
        <tr>
          <th class="px-4 py-2 text-left">Status</th>
          <td class="px-4 py-2">
            {% if course.isActive() %}
              <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300">
                Active
              </span>
            {% else %}
              <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-gray-200 text-gray-700 dark:bg-gray-700 dark:text-gray-300">
                Inactive
              </span>
            {% endif %}
          </td>
        </tr>
      </tbody>
    </table>

    <div class="mt-4 flex justify-between">
      <a href="{{ path('app_course_edit', {'id': course.id}) }}"
         class="px-4 py-2 rounded bg-yellow-500 text-white hover:bg-yellow-600 dark:hover:bg-yellow-700">
        Edit
      </a>

      {% include 'course/_delete_form.html.twig' %}
    </div>
  </div>
</div>
{% endblock %}
