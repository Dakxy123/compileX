{% extends 'base.html.twig' %}

{% block title %}Course Details — CompileX{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>tailwind.config = { darkMode: 'class' };</script>

<div id="app" class="flex min-h-screen bg-slate-50 dark:bg-gray-900 text-slate-900 dark:text-gray-100">

  <div class="flex-1 flex flex-col min-h-screen">
    <header class="fixed top-0 left-0 right-0 z-40 bg-slate-800 dark:bg-gray-800 text-white flex items-center justify-between px-6 py-3 shadow-md">
      <h1 class="text-xl font-semibold text-blue-400 dark:text-blue-300 tracking-tight">
        CompileX — Course Management
      </h1>

      <div class="flex items-center gap-2">
        <a href="{{ path('app_course_index') }}"
           class="text-sm font-medium px-3 py-1.5 rounded-lg bg-white/10 hover:bg-white/20">
          Back to Courses
        </a>
      </div>
    </header>

    <div class="h-16"></div>

    <main class="flex-1 flex items-start justify-center px-4 py-10">
      <div class="w-full max-w-2xl bg-white dark:bg-gray-800 rounded-2xl border border-slate-200 dark:border-gray-700 shadow-sm overflow-hidden">

        <div class="px-6 md:px-8 py-6 border-b border-slate-200 dark:border-gray-700">
          <div class="flex items-start justify-between gap-4">
            <div>
              <h2 class="text-2xl font-semibold">Course Details</h2>
              <p class="text-sm text-slate-600 dark:text-gray-400 mt-1">
                View course info, description, and status.
              </p>
            </div>

            <div class="shrink-0">
              {% if course.isActive() %}
                <span class="inline-flex items-center px-2.5 py-1 text-xs font-semibold rounded-full bg-emerald-100 text-emerald-700 dark:bg-emerald-900/40 dark:text-emerald-200">
                  Active
                </span>
              {% else %}
                <span class="inline-flex items-center px-2.5 py-1 text-xs font-semibold rounded-full bg-slate-200 text-slate-700 dark:bg-gray-700 dark:text-gray-200">
                  Inactive
                </span>
              {% endif %}
            </div>
          </div>
        </div>

        <div class="px-6 md:px-8 py-6 space-y-6">
          <dl class="grid grid-cols-1 md:grid-cols-2 gap-5 text-sm">
            <div class="rounded-xl border border-slate-200 dark:border-gray-700 bg-slate-50/70 dark:bg-gray-900/40 p-4">
              <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500 dark:text-gray-400">ID</dt>
              <dd class="mt-1 font-semibold text-slate-900 dark:text-gray-100">
                {{ course.id }}
              </dd>
            </div>

            <div class="rounded-xl border border-slate-200 dark:border-gray-700 bg-slate-50/70 dark:bg-gray-900/40 p-4">
              <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500 dark:text-gray-400">Course Code</dt>
              <dd class="mt-1 font-semibold text-slate-900 dark:text-gray-100">
                {{ course.name }}
              </dd>
            </div>

            <div class="md:col-span-2 rounded-xl border border-slate-200 dark:border-gray-700 bg-slate-50/70 dark:bg-gray-900/40 p-4">
              <dt class="text-xs font-semibold uppercase tracking-wide text-slate-500 dark:text-gray-400">Course Name / Description</dt>
              <dd class="mt-2 text-slate-800 dark:text-gray-100 whitespace-pre-line">
                {{ course.description ?: '—' }}
              </dd>
            </div>
          </dl>

          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 pt-2">
            <a href="{{ path('app_course_edit', {'id': course.id}) }}"
               class="inline-flex items-center justify-center px-4 py-2 rounded-xl bg-amber-500 text-white text-sm font-semibold hover:bg-amber-600 dark:hover:bg-amber-600">
              Edit
            </a>

            <div class="sm:ml-auto">
              {% include 'course/_delete_form.html.twig' %}
            </div>
          </div>
        </div>

      </div>
    </main>
  </div>
</div>
{% endblock %}
