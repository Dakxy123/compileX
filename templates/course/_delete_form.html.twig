<form method="post"
      action="{{ path('app_course_delete', {'id': course.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this course?');"
      class="inline-flex">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
  <button type="submit"
          class="inline-flex items-center justify-center px-4 py-2 rounded-xl bg-red-500 text-white text-sm font-semibold hover:bg-red-600 dark:bg-red-600 dark:hover:bg-red-700 transition">
    Delete
  </button>
</form>
