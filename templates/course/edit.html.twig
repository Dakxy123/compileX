{% extends 'base.html.twig' %}

{% block title %}Edit Course — CompileX{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>tailwind.config = { darkMode: 'class' };</script>

<div id="app" class="flex min-h-screen bg-slate-50 dark:bg-gray-900 text-slate-900 dark:text-gray-100">

  <div class="flex-1 flex flex-col min-h-screen">
    <header class="fixed top-0 left-0 right-0 z-40 bg-slate-800 dark:bg-gray-800 text-white flex items-center justify-between px-6 py-3 shadow-md">
      <h1 class="text-xl font-semibold text-blue-400 dark:text-blue-300 tracking-tight">
        CompileX — Course Management
      </h1>

      <div class="flex items-center gap-2">
        <a href="{{ path('app_course_index') }}"
           class="text-sm font-medium px-3 py-1.5 rounded-lg bg-white/10 hover:bg-white/20">
          Back to Courses
        </a>
      </div>
    </header>

    <div class="h-16"></div>

    <main class="flex-1 flex items-start justify-center px-4 py-10">
      <div class="w-full max-w-2xl bg-white dark:bg-gray-800 rounded-2xl border border-slate-200 dark:border-gray-700 shadow-sm p-6 md:p-8 space-y-6">

        <div class="flex items-start justify-between gap-4">
          <div>
            <h2 class="text-2xl font-semibold">Edit Course</h2>
            <p class="text-sm text-slate-600 dark:text-gray-400 mt-1">
              Update the course details and status.
            </p>
          </div>

          {% if course is defined and course %}
            <a href="{{ path('app_course_show', {'id': course.id}) }}"
               class="shrink-0 px-4 py-2 rounded-xl border border-slate-300 dark:border-gray-600 text-sm font-semibold hover:bg-slate-100 dark:hover:bg-gray-900">
              View
            </a>
          {% endif %}
        </div>

        {{ form_start(form) }}
          {% include 'course/_form.html.twig' with { form: form } %}

          <div class="pt-6 flex items-center justify-between gap-3">
            <a href="{{ path('app_course_index') }}"
               class="px-4 py-2 rounded-xl border border-slate-300 dark:border-gray-600 text-sm font-semibold hover:bg-slate-100 dark:hover:bg-gray-900">
              Cancel
            </a>

            <button type="submit"
                    class="px-5 py-2 rounded-xl bg-indigo-600 text-white text-sm font-semibold hover:bg-indigo-700">
              Update Course
            </button>
          </div>
        {{ form_end(form) }}

      </div>
    </main>
  </div>
</div>
{% endblock %}
