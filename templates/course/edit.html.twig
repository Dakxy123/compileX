{% extends 'base.html.twig' %}

{% block title %}Edit course{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<div class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-xl bg-white shadow-md rounded-lg border border-gray-200 p-6">
    <div class="mb-6 flex items-center justify-between">
      <h1 class="text-2xl font-semibold text-gray-900">Edit course</h1>
      <span class="text-sm text-gray-600">ID: {{ course.id }}</span>
    </div>

    {{ include('course/_form.html.twig', {
      action_path: path('app_course_edit', {'id': course.id}),
      csrf_token: csrf_token('edit' ~ course.id),
      course: course
    }) }}
  </div>
</div>

<div class="flex items-center justify-center mt-6">
  <a href="{{ path('app_course_index') }}" class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-800 rounded-md text-sm shadow-sm hover:bg-gray-200">
    Back to list
  </a>
</div>
{% endblock %}
