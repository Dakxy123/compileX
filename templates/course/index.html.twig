{% extends 'base.html.twig' %}

{% block title %}Course Management — CompileX{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = { darkMode: 'class' };
</script>

{% set isAdmin = is_granted('ROLE_ADMIN') %}
{% set isInstructor = is_granted('ROLE_INSTRUCTOR') %}
{% set isStudent = is_granted('ROLE_USER') %}

<div id="root" class="min-h-screen bg-slate-50 dark:bg-gray-900 text-slate-900 dark:text-gray-100">

  <header class="fixed top-0 left-0 right-0 z-40 bg-slate-800 text-white dark:bg-gray-800 border-b border-white/10 shadow-md">
    <div class="px-4 md:px-6 py-3 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <button id="burger-mobile"
                class="md:hidden w-10 h-10 rounded-xl bg-white/10 hover:bg-white/15">
          &#9776;
        </button>

        <button id="burger-desktop"
                class="hidden md:inline-flex w-10 h-10 rounded-xl bg-white/10 hover:bg-white/15 items-center justify-center">
          ≡
        </button>

        <div class="leading-tight">
          <div class="text-lg font-semibold text-blue-400 dark:text-blue-300 tracking-tight">
            CompileX
            <span class="text-sm text-white/60">
              {% if isAdmin %}Admin{% elseif isInstructor %}Instructor{% else %}Student{% endif %}
            </span>
          </div>
          <div class="text-xs text-white/70">Course Management</div>
        </div>
      </div>

      <div class="flex items-center gap-2">
        <button id="mode-toggle"
                class="px-3 py-1.5 rounded-full bg-white/10 hover:bg-white/15 text-sm">
          Toggle Mode
        </button>
        <a href="{{ path('app_logout') }}"
           class="px-3 py-1.5 rounded-full bg-red-500/20 hover:bg-red-500/30 text-red-200 text-sm">
          Logout
        </a>
      </div>
    </div>
  </header>

  <div class="h-16"></div>

  <div class="flex">

    <aside id="sidebar"
           class="fixed md:static top-16 left-0 z-50 h-[calc(100vh-64px)] w-72 bg-slate-900 dark:bg-gray-900 text-white border-r border-white/10 overflow-y-auto transform -translate-x-full md:translate-x-0 transition-transform duration-300">

      <div class="px-5 py-4 border-b border-white/10 flex items-center justify-between">
        <div>
          <div class="text-base font-semibold">CompileX</div>
          <div class="text-xs text-white/60">
            {% if isAdmin %}Admin Panel{% elseif isInstructor %}Instructor Panel{% else %}Student Panel{% endif %}
          </div>
        </div>

        <button id="sidebar-close"
                class="md:hidden w-10 h-10 rounded-xl bg-white/10 hover:bg-white/15">
          ×
        </button>
      </div>

      <nav class="px-4 py-4 space-y-1 text-sm">

        <a href="{{ path('home') }}"
           class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
          <span class="w-2.5 h-2.5 rounded-full bg-white/60"></span>
          <span class="nav-text">Home</span>
        </a>

        {% if isAdmin %}
          <div class="mt-3 pt-3 border-t border-white/10 text-xs uppercase tracking-wide text-white/50">
            Admin
          </div>

          <a href="{{ path('app_admin') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-blue-300/80"></span>
            <span class="nav-text">Dashboard</span>
          </a>

          <a href="{{ path('app_user_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-violet-300/80"></span>
            <span class="nav-text">Users</span>
          </a>

          <a href="{{ path('app_course_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl bg-white/10 border border-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-amber-300/80"></span>
            <span class="nav-text">Courses</span>
          </a>

          <a href="{{ path('app_subject_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-emerald-300/80"></span>
            <span class="nav-text">Subjects</span>
          </a>

          <a href="{{ path('app_module_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-sky-300/80"></span>
            <span class="nav-text">Modules</span>
          </a>

          <a href="{{ path('app_enrollment_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-pink-300/80"></span>
            <span class="nav-text">Enrollments</span>
          </a>

          <a href="{{ path('app_instructor_assignment_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-indigo-300/80"></span>
            <span class="nav-text">Instructor Assignments</span>
          </a>

          <a href="{{ path('app_instructor_application_admin_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-fuchsia-300/80"></span>
            <span class="nav-text">Instructor Applications</span>
          </a>

          <a href="{{ path('app_activity_log_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-rose-300/80"></span>
            <span class="nav-text">Activity Logs</span>
          </a>

          <a href="{{ path('app_student_profile_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-lime-300/80"></span>
            <span class="nav-text">Students</span>
          </a>
        {% endif %}

        {% if isInstructor and not isAdmin %}
          <div class="mt-3 pt-3 border-t border-white/10 text-xs uppercase tracking-wide text-white/50">
            Instructor
          </div>

          <a href="{{ path('app_instructor_dashboard') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-emerald-300/80"></span>
            <span class="nav-text">Instructor Dashboard</span>
          </a>

          <a href="{{ path('app_subject_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-sky-300/80"></span>
            <span class="nav-text">Subjects</span>
          </a>

          <a href="{{ path('app_module_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-indigo-300/80"></span>
            <span class="nav-text">Modules</span>
          </a>
        {% endif %}

        {% if isStudent and not isAdmin and not isInstructor %}
          <div class="mt-3 pt-3 border-t border-white/10 text-xs uppercase tracking-wide text-white/50">
            Student
          </div>

          <a href="{{ path('app_student_dashboard') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-sky-300/80"></span>
            <span class="nav-text">Student Dashboard</span>
          </a>

          <a href="{{ path('app_module_index') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-indigo-300/80"></span>
            <span class="nav-text">Modules</span>
          </a>
        {% endif %}

        <div class="mt-4 pt-4 border-t border-white/10">
          <a href="{{ path('home') }}" class="flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-white/10">
            <span class="w-2.5 h-2.5 rounded-full bg-white/60"></span>
            <span class="nav-text">Back to Home</span>
          </a>
        </div>
      </nav>
    </aside>

    <main id="main" class="flex-1 px-4 md:px-8 py-8 md:ml-72 transition-all duration-300 w-full">

      <div class="max-w-6xl mx-auto space-y-6">

        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
          <div>
            <h1 class="text-3xl font-semibold">Courses</h1>
            <p class="text-sm text-slate-600 dark:text-gray-400">
              Manage course code, description, and status.
            </p>
          </div>

          {% if isAdmin %}
            <div class="flex gap-2">
              <a href="{{ path('app_course_new') }}"
                 class="px-4 py-2 rounded-xl bg-blue-600 text-white text-sm font-semibold hover:bg-blue-700">
                + New Course
              </a>
              <a href="{{ path('app_course_export', {'q': q, 'status': status}) }}"
                 class="px-4 py-2 rounded-xl bg-emerald-600 text-white text-sm font-semibold hover:bg-emerald-700">
                Export CSV
              </a>
            </div>
          {% endif %}
        </div>

        <form method="get"
              class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm p-5">
          <div class="grid grid-cols-1 md:grid-cols-12 gap-3 items-end">
            <div class="md:col-span-7">
              <input type="text"
                     name="q"
                     value="{{ q }}"
                     placeholder="Search courses…"
                     class="w-full rounded-xl border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-sm px-3 py-2">
            </div>

            <div class="md:col-span-3">
              <select name="status"
                      class="w-full rounded-xl border border-slate-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-sm px-3 py-2">
                <option value="all" {{ status == 'all' ? 'selected' : '' }}>All</option>
                <option value="active" {{ status == 'active' ? 'selected' : '' }}>Active</option>
                <option value="inactive" {{ status == 'inactive' ? 'selected' : '' }}>Inactive</option>
              </select>
            </div>

            <div class="md:col-span-2 flex gap-2">
              <button class="w-full rounded-xl bg-slate-900 dark:bg-slate-700 text-white text-sm font-semibold px-4 py-2">
                Apply
              </button>
              <a href="{{ path('app_course_index') }}"
                 class="w-full text-center rounded-xl border border-slate-300 dark:border-gray-600 text-sm font-semibold px-4 py-2">
                Reset
              </a>
            </div>
          </div>
        </form>

        <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm overflow-hidden">
          <table class="min-w-full text-sm">
            <thead class="bg-slate-50 dark:bg-gray-900">
              <tr class="text-left text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">
                <th class="px-4 py-2">ID</th>
                <th class="px-4 py-2">Course</th>
                <th class="px-4 py-2">Description</th>
                <th class="px-4 py-2">Status</th>
                <th class="px-4 py-2 text-right">Actions</th>
              </tr>
            </thead>

            <tbody>
              {% for course in courses %}
                <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                  <td class="px-4 py-3 text-xs">{{ course.id }}</td>
                  <td class="px-4 py-3 font-semibold">{{ course.name }}</td>
                  <td class="px-4 py-3 text-xs">{{ course.description ?? '—' }}</td>
                  <td class="px-4 py-3">
                    {% if course.isActive() %}
                      <span class="px-2 py-1 text-xs rounded-full bg-emerald-100 text-emerald-700 dark:bg-emerald-900 dark:text-emerald-300">Active</span>
                    {% else %}
                      <span class="px-2 py-1 text-xs rounded-full bg-slate-200 text-slate-700 dark:bg-gray-700 dark:text-gray-300">Inactive</span>
                    {% endif %}
                  </td>
                  <td class="px-4 py-3 text-right space-x-1">
                    <a href="{{ path('app_course_show', {'id': course.id}) }}"
                       class="px-2 py-1 rounded-lg bg-blue-600 text-white text-xs">Show</a>
                    {% if isAdmin %}
                      <a href="{{ path('app_course_edit', {'id': course.id}) }}"
                         class="px-2 py-1 rounded-lg bg-amber-500 text-white text-xs">Edit</a>
                    {% endif %}
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="5" class="px-4 py-6 text-center text-sm text-slate-500 dark:text-gray-400">
                    No courses found.
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>

      </div>
    </main>
  </div>
</div>

<script>
const DARK_KEY = 'compilex-dark-mode'
const SIDEBAR_KEY = 'compilex-sidebar-collapsed'

const root = document.getElementById('root')
const sidebar = document.getElementById('sidebar')
const main = document.getElementById('main')

const burgerMobile = document.getElementById('burger-mobile')
const burgerDesktop = document.getElementById('burger-desktop')
const sidebarClose = document.getElementById('sidebar-close')
const modeToggle = document.getElementById('mode-toggle')

function setTheme(v){document.documentElement.classList.toggle('dark',v);localStorage.setItem(DARK_KEY,String(v))}
function loadTheme(){setTheme(localStorage.getItem(DARK_KEY)==='true')}
function openSidebar(){sidebar.classList.remove('-translate-x-full')}
function closeSidebar(){sidebar.classList.add('-translate-x-full')}
function toggleSidebar(){
  if(window.innerWidth<768){sidebar.classList.contains('-translate-x-full')?openSidebar():closeSidebar();return}
  root.classList.toggle('sidebar-collapsed')
  const c=root.classList.contains('sidebar-collapsed')
  localStorage.setItem(SIDEBAR_KEY,String(c))
  c?main.classList.remove('md:ml-72'):main.classList.add('md:ml-72')
}

burgerMobile?.addEventListener('click',e=>{e.stopPropagation();toggleSidebar()})
burgerDesktop?.addEventListener('click',e=>{e.stopPropagation();toggleSidebar()})
sidebarClose?.addEventListener('click',e=>{e.stopPropagation();closeSidebar()})
modeToggle?.addEventListener('click',e=>{e.stopPropagation();setTheme(!document.documentElement.classList.contains('dark'))})

document.addEventListener('click',e=>{
  if(window.innerWidth>=768)return
  if(!sidebar.contains(e.target)&&!e.target.closest('#burger-mobile')&&!sidebar.classList.contains('-translate-x-full'))closeSidebar()
})
document.addEventListener('keydown',e=>{if(e.key==='Escape'&&window.innerWidth<768&&!sidebar.classList.contains('-translate-x-full'))closeSidebar()})

function loadSidebar(){
  const c=localStorage.getItem(SIDEBAR_KEY)==='true'
  if(c&&window.innerWidth>=768){root.classList.add('sidebar-collapsed');main.classList.remove('md:ml-72')}
  else{root.classList.remove('sidebar-collapsed');main.classList.add('md:ml-72')}
}
loadTheme();loadSidebar();closeSidebar()
</script>

<style>
.sidebar-collapsed #sidebar{width:5.25rem!important}
.sidebar-collapsed .nav-text{display:none!important}
@media(min-width:768px){#sidebar{width:18rem}}
</style>
{% endblock %}
