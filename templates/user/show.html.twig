{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = { darkMode: 'class' };
</script>

<div class="min-h-screen flex items-center justify-center bg-slate-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100">
  <div class="p-8 bg-white dark:bg-gray-800 rounded shadow max-w-lg w-full mx-4">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-gray-100">User Details</h2>
      <a href="{{ path('app_user_index') }}" class="text-gray-500 dark:text-gray-300 hover:text-gray-700 dark:hover:text-gray-100 text-2xl font-bold">
        Ã—
      </a>
    </div>

    <table class="min-w-full border border-gray-200 dark:border-gray-700 text-gray-900 dark:text-gray-100">
      <tbody>
        <tr>
          <th class="px-4 py-2 border bg-gray-50 dark:bg-gray-700 text-left w-32">ID</th>
          <td class="px-4 py-2 border">{{ user.id }}</td>
        </tr>
        <tr>
          <th class="px-4 py-2 border bg-gray-50 dark:bg-gray-700 text-left">Email</th>
          <td class="px-4 py-2 border break-all">{{ user.email }}</td>
        </tr>
        <tr>
          <th class="px-4 py-2 border bg-gray-50 dark:bg-gray-700 text-left">Roles</th>
          <td class="px-4 py-2 border">
            {{ user.roles|join(', ') }}
          </td>
        </tr>
      </tbody>
    </table>

    <div class="mt-4 flex flex-wrap gap-2">
      <a href="{{ path('app_user_edit', {'id': user.id}) }}"
         class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600 dark:hover:bg-yellow-700">
        Edit
      </a>

      {{ include('user/_delete_form.html.twig') }}

      <a href="{{ path('app_user_index') }}"
         class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400 dark:bg-gray-700 dark:text-gray-100 dark:hover:bg-gray-600">
        Back to list
      </a>
    </div>
  </div>
</div>
{% endblock %}
