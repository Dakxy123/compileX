<div class="space-y-4">
  <!-- Name -->
  <div>
    {{ form_label(form.name, 'Subject Name', {'label_attr': {'class': 'block text-sm font-medium mb-1 text-gray-700 dark:text-gray-200'}}) }}
    {{ form_widget(form.name, {
      'attr': {
        'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100'
      }
    }) }}
    {% include '/form/_errors_tailwind.html.twig' with {'errors': form.name.vars.errors} %}
  </div>

  <!-- Code -->
  <div>
    {{ form_label(form.code, 'Subject Code', {'label_attr': {'class': 'block text-sm font-medium mb-1 text-gray-700 dark:text-gray-200'}}) }}
    {{ form_widget(form.code, {
      'attr': {
        'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100'
      }
    }) }}
    {% include '/form/_errors_tailwind.html.twig' with {'errors': form.code.vars.errors} %}
  </div>

  <!-- Year Level -->
  <div>
    {{ form_label(form.yearLevel, 'Year Level', {'label_attr': {'class': 'block text-sm font-medium mb-1 text-gray-700 dark:text-gray-200'}}) }}
    {{ form_widget(form.yearLevel, {
      'attr': {
        'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100'
      }
    }) }}
    {% include '/form/_errors_tailwind.html.twig' with {'errors': form.yearLevel.vars.errors} %}
  </div>

  <!-- Semester -->
  <div>
    {{ form_label(form.semester, 'Semester', {'label_attr': {'class': 'block text-sm font-medium mb-1 text-gray-700 dark:text-gray-200'}}) }}
    {{ form_widget(form.semester, {
      'attr': {
        'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100'
      }
    }) }}
    {% include '/form/_errors_tailwind.html.twig' with {'errors': form.semester.vars.errors} %}
  </div>

  <!-- Course -->
  <div>
    {{ form_label(form.course, 'Course', {'label_attr': {'class': 'block text-sm font-medium mb-1 text-gray-700 dark:text-gray-200'}}) }}
    {{ form_widget(form.course, {
      'attr': {
        'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100'
      }
    }) }}
    {% include '/form/_errors_tailwind.html.twig' with {'errors': form.course.vars.errors} %}
  </div>

  <!-- Description -->
  <div>
    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium mb-1 text-gray-700 dark:text-gray-200'}}) }}
    {{ form_widget(form.description, {
      'attr': {
        'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100',
        'rows': 4
      }
    }) }}
    {% include '/form/_errors_tailwind.html.twig' with {'errors': form.description.vars.errors} %}
  </div>
</div>
