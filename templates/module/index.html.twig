{% extends 'base.html.twig' %}

{% block title %}Module Management{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = { darkMode: 'class' }
</script>

<div id="app" class="flex min-h-screen bg-slate-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100">

  {# =================== SIDEBAR (ROLE-AWARE) =================== #}
  <aside id="sidebar"
         class="fixed top-0 left-0 z-50 h-full w-64 bg-slate-800 text-white dark:bg-gray-800 transform -translate-x-full transition-transform duration-300 flex flex-col overflow-y-auto">
    <div class="px-6 py-5 border-b border-slate-700 dark:border-gray-700 flex items-center justify-between">
      <h2 class="text-xl font-semibold tracking-tight">
        {% if is_granted('ROLE_ADMIN') %}
          CompileX Admin
        {% elseif is_granted('ROLE_INSTRUCTOR') %}
          CompileX Instructor
        {% else %}
          CompileX
        {% endif %}
      </h2>
      <button class="text-2xl md:text-3xl focus:outline-none" onclick="toggleSidebar()">×</button>
    </div>

    <nav class="flex-1 px-4 py-4 space-y-1">
      <a href="{{ path('home') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Home
      </a>

      {# ================= ADMIN LINKS ================= #}
      {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_admin') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Admin Dashboard
        </a>
        <a href="{{ path('app_user_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Users
        </a>
        <a href="{{ path('app_course_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Courses
        </a>
      {% endif %}

      {# =============== INSTRUCTOR QUICK LINK (optional) =============== #}
      {% if is_granted('ROLE_INSTRUCTOR') and not is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_instructor_dashboard') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Instructor Dashboard
        </a>
      {% endif %}

      {# ================= SHARED (ADMIN + INSTRUCTOR) ================= #}
      {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_INSTRUCTOR') %}
        <div class="mt-4 pt-3 border-t border-slate-700 dark:border-gray-600 text-xs uppercase tracking-wide text-slate-400 dark:text-gray-400">
          Manage (Shared)
        </div>

        <a href="{{ path('app_subject_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Subjects
        </a>
        <a href="{{ path('app_module_index') }}"
           class="block px-3 py-2 rounded-md font-medium bg-slate-700 dark:bg-gray-700 hover:bg-slate-600 dark:hover:bg-gray-600">
          Modules
        </a>
        <a href="{{ path('app_enrollment_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Enrollments
        </a>
      {% endif %}

      {# ================= ADMIN-ONLY (continued) ================= #}
      {% if is_granted('ROLE_ADMIN') %}
        <div class="mt-4 pt-3 border-t border-slate-700 dark:border-gray-600 text-xs uppercase tracking-wide text-slate-400 dark:text-gray-400">
          Admin Tools
        </div>

        <a href="{{ path('app_instructor_assignment_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Instructor Assignments
        </a>
        <a href="{{ path('app_instructor_application_admin_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Instructor Applications
        </a>
        <a href="{{ path('app_activity_log_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Activity Logs
        </a>
        <a href="{{ path('app_student_profile_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Students
        </a>
      {% endif %}

      <div class="pt-4 border-t border-slate-700 dark:border-gray-600 mt-4">
        <button id="mode-toggle"
                class="mt-2 block w-full text-left px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Toggle Light/Dark Mode
        </button>

        {% if is_granted('ROLE_ADMIN') %}
          <a href="/"
             class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
            Back to Home
          </a>
        {% endif %}

        <a href="{{ path('app_logout') }}"
           class="block px-3 py-2 rounded-md font-medium text-red-300 hover:bg-red-700/40">
          Logout
        </a>
      </div>
    </nav>
  </aside>

  {# =================== MAIN =================== #}
  <div class="flex-1 flex flex-col min-h-screen">
    <header class="fixed top-0 left-0 w-full z-40 bg-slate-800 text-white dark:bg-gray-800 flex items-center justify-between px-6 py-3 shadow-md">
      <h1 class="text-xl font-semibold text-blue-400 dark:text-blue-300 tracking-tight">
        {% if is_granted('ROLE_ADMIN') %}
          CompileX — Admin
        {% elseif is_granted('ROLE_INSTRUCTOR') %}
          CompileX — Instructor
        {% else %}
          CompileX
        {% endif %}
      </h1>
      <button class="text-2xl md:text-3xl focus:outline-none" aria-label="Toggle menu" onclick="toggleSidebar()">
        <span id="burger-icon">&#9776;</span>
      </button>
    </header>

    <div class="h-16"></div>

    <main id="main-content" class="flex-1 p-8 max-w-6xl mx-auto w-full">

      {# Flash messages #}
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="mb-4 px-4 py-3 rounded border
                      {% if label == 'success' %}
                        bg-green-50 border-green-300 text-green-800 dark:bg-green-900/40 dark:border-green-700 dark:text-green-200
                      {% elseif label == 'error' %}
                        bg-red-50 border-red-300 text-red-800 dark:bg-red-900/40 dark:border-red-700 dark:text-red-200
                      {% else %}
                        bg-slate-50 border-slate-300 text-slate-800 dark:bg-slate-800/40 dark:border-slate-600 dark:text-slate-100
                      {% endif %}">
            <span class="text-sm">{{ message }}</span>
          </div>
        {% endfor %}
      {% endfor %}

      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3 mb-4">
        <div>
          <h1 class="text-3xl font-semibold">Modules</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            Manage class modules per Course / Subject / Instructor.
          </p>
        </div>

        <div class="flex flex-wrap gap-2">
          {# UX: only admin can create/export (change if you want) #}
          {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_module_new') }}"
               class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
              + New Module
            </a>
            <a href="{{ path('app_module_export', {
                q: q,
                courseId: courseId,
                yearLevel: yearLevel,
                semester: semester,
                status: status,
                instructorId: instructorId
            }) }}"
               class="px-4 py-2 bg-emerald-600 text-white rounded hover:bg-emerald-700">
              Export CSV
            </a>
          {% endif %}
        </div>
      </div>

      {# Filters #}
      <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-2 mb-4">

        <div class="md:col-span-2 flex gap-2">
          <input type="text"
                 name="q"
                 value="{{ q }}"
                 placeholder="Search by name or code"
                 class="px-3 py-2 border rounded w-full bg-white dark:bg-gray-700 dark:text-gray-100 text-gray-900">
        </div>

        <div>
          <select name="courseId"
                  class="w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100">
            <option value="">All Courses</option>
            {% for course in courses %}
              <option value="{{ course.id }}"
                {{ courseId is defined and courseId is not null and courseId != '' and courseId == course.id ? 'selected' : '' }}>
                {{ course.name }}
              </option>
            {% endfor %}
          </select>
        </div>

        <div class="flex gap-2">
          <select name="yearLevel"
                  class="w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100">
            <option value="">All Year Levels</option>
            {% for lvl in 1..5 %}
              <option value="{{ lvl }}"
                {{ yearLevel is defined and yearLevel is not null and yearLevel != '' and yearLevel == lvl ? 'selected' : '' }}>
                Year {{ lvl }}
              </option>
            {% endfor %}
          </select>

          <select name="semester"
                  class="w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100">
            <option value="">All Semesters</option>
            <option value="1" {{ semester is defined and semester == '1' ? 'selected' : '' }}>1st Sem</option>
            <option value="2" {{ semester is defined and semester == '2' ? 'selected' : '' }}>2nd Sem</option>
          </select>
        </div>

        <div class="md:col-span-2 flex flex-col md:flex-row gap-2">
          <select name="status"
                  class="w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100">
            <option value="all" {{ status is not defined or status == 'all' ? 'selected' : '' }}>All Status</option>
            <option value="Active" {{ status == 'Active' ? 'selected' : '' }}>Active</option>
            <option value="Closed" {{ status == 'Closed' ? 'selected' : '' }}>Closed</option>
          </select>

          {% if is_granted('ROLE_ADMIN') %}
            <select name="instructorId"
                    class="w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100">
              <option value="">All Instructors</option>
              {% for inst in instructors %}
                <option value="{{ inst.id }}"
                  {{ instructorId is defined and instructorId is not null and instructorId != '' and instructorId == inst.id ? 'selected' : '' }}>
                  {{ inst.email }}
                </option>
              {% endfor %}
            </select>
          {% else %}
            <input type="text"
                   value="{{ app.user ? app.user.email : '' }}"
                   class="w-full px-3 py-2 border rounded bg-gray-100 dark:bg-gray-700 dark:text-gray-200 text-gray-500 text-sm"
                   disabled>
          {% endif %}

          <button class="px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-900 dark:bg-gray-600 dark:hover:bg-gray-500">
            Apply
          </button>
        </div>
      </form>

      {# Modules Table #}
      <table class="min-w-full border rounded shadow bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100">
        <thead>
        <tr class="bg-gray-100 dark:bg-gray-700 text-left text-xs font-semibold uppercase tracking-wide">
          <th class="px-4 py-2">ID</th>
          <th class="px-4 py-2">Code</th>
          <th class="px-4 py-2">Name</th>
          <th class="px-4 py-2">Course</th>
          <th class="px-4 py-2">Year</th>
          <th class="px-4 py-2">Sem</th>
          <th class="px-4 py-2">Instructor</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for module in modules %}
          {% set courseName = module.course ? module.course.name : '—' %}
          {% set courseShort = courseName|length > 35 ? courseName|slice(0, 35) ~ '…' : courseName %}

          <tr class="border-t hover:bg-gray-50 dark:hover:bg-gray-700 text-sm">
            <td class="px-4 py-2">{{ module.id }}</td>
            <td class="px-4 py-2 font-mono text-xs">{{ module.code }}</td>
            <td class="px-4 py-2">
              {{ module.name|length > 40 ? module.name|slice(0,40) ~ '…' : module.name }}
            </td>
            <td class="px-4 py-2">
              <span title="{{ courseName }}">{{ courseShort }}</span>
            </td>
            <td class="px-4 py-2">Year {{ module.yearLevel }}</td>
            <td class="px-4 py-2">
              {% if module.semester == 1 %}
                1st
              {% elseif module.semester == 2 %}
                2nd
              {% else %}
                —
              {% endif %}
            </td>
            <td class="px-4 py-2 text-xs">
              {{ module.instructor ? module.instructor.email : '—' }}
            </td>
            <td class="px-4 py-2">
              {% if module.status == 'Active' %}
                <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300">
                  Active
                </span>
              {% else %}
                <span class="inline-flex items-center px-2 py-1 text-xs font-semibold rounded-full bg-gray-200 text-gray-700 dark:bg-gray-700 dark:text-gray-300">
                  Closed
                </span>
              {% endif %}
            </td>
            <td class="px-4 py-2 space-x-1">
              <a href="{{ path('app_module_show', {'id': module.id}) }}"
                 class="px-2 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 text-xs">
                Show
              </a>

              <a href="{{ path('app_module_edit', {'id': module.id}) }}"
                 class="px-2 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 text-xs">
                Edit
              </a>

              {% if is_granted('ROLE_ADMIN') %}
                <form method="post"
                      action="{{ path('app_module_delete', {'id': module.id}) }}"
                      class="inline-block"
                      onsubmit="return confirm('Delete this module?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ module.id) }}">
                  <button type="submit"
                          class="px-2 py-1 bg-red-600 text-white rounded hover:bg-red-700 text-xs">
                    Delete
                  </button>
                </form>
              {% elseif is_granted('ROLE_INSTRUCTOR') %}
                <button type="button"
                        class="px-2 py-1 bg-red-100 text-red-700 rounded border border-red-300 dark:bg-red-900/30 dark:text-red-300 dark:border-red-700 cursor-not-allowed text-[11px]"
                        title="Request delete (to be implemented)">
                  Request delete
                </button>
              {% endif %}
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="9" class="px-4 py-4 text-center text-sm text-gray-500 dark:text-gray-400">
              No modules found
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </main>
  </div>
</div>

<script>
const sidebar = document.getElementById('sidebar');
const burgerIcon = document.getElementById('burger-icon');

function toggleSidebar() {
  sidebar.classList.toggle('-translate-x-full');
  if (burgerIcon) {
    burgerIcon.innerHTML = sidebar.classList.contains('-translate-x-full') ? '&#9776;' : '&times;';
  }
}

const DARK_KEY = 'compilex-dark-mode';
const modeToggle = document.getElementById('mode-toggle');

function loadInitialTheme() {
  const saved = localStorage.getItem(DARK_KEY);
  document.documentElement.classList.toggle('dark', saved === 'true');
}
loadInitialTheme();

if (modeToggle) {
  modeToggle.addEventListener('click', e => {
    e.stopPropagation();
    const isDark = document.documentElement.classList.contains('dark');
    document.documentElement.classList.toggle('dark', !isDark);
    localStorage.setItem(DARK_KEY, (!isDark).toString());
  });
}

document.addEventListener('click', e => {
  if (!sidebar.contains(e.target) &&
      !e.target.closest('button[aria-label="Toggle menu"]') &&
      !sidebar.classList.contains('-translate-x-full')) {
    toggleSidebar();
  }
});

document.addEventListener('keydown', e => {
  if (e.key === 'Escape' && !sidebar.classList.contains('-translate-x-full')) toggleSidebar();
});
</script>
{% endblock %}
