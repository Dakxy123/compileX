{% extends 'base.html.twig' %}

{% block title %}Module Details — Admin{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen bg-slate-50 text-slate-900 p-8">
  <div class="max-w-4xl mx-auto">

    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-semibold">Module Details</h1>

      <a href="{{ path('app_module_edit', {'id': module.id}) }}"
         class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">
        Edit
      </a>
    </div>

    <a href="{{ path('app_module_index') }}"
       class="text-blue-600 hover:underline mb-4 block">&larr; Back to list</a>

    <div class="bg-white p-6 rounded shadow border border-gray-200 space-y-4">
      <p><strong>ID:</strong> {{ module.id }}</p>
      <p><strong>Code:</strong> {{ module.code }}</p>
      <p><strong>Name:</strong> {{ module.name }}</p>

      <p><strong>Course:</strong>
        {{ module.course ? module.course.name : '—' }}
      </p>

      <p><strong>Subject:</strong>
        {{ module.subject ? module.subject.name : '—' }}
      </p>

      <p><strong>Instructor:</strong>
        {{ module.instructor ? module.instructor.email : '—' }}
      </p>

      <p><strong>Year Level:</strong> {{ module.yearLevel }}</p>

      <p><strong>Semester:</strong>
        {% if module.semester == 1 %}
          1st Semester
        {% elseif module.semester == 2 %}
          2nd Semester
        {% else %}
          —
        {% endif %}
      </p>

      <p><strong>Schedule:</strong> {{ module.schedule ?: '—' }}</p>

      <p><strong>Status:</strong>
        {% if module.status == 'Active' %}
          <span class="px-2 py-1 bg-green-100 text-green-800 rounded text-xs">Active</span>
        {% else %}
          <span class="px-2 py-1 bg-gray-300 text-gray-700 rounded text-xs">Closed</span>
        {% endif %}
      </p>

      <div class="pt-4 border-t border-gray-300">
        {% include 'module/_delete_form.html.twig' %}
      </div>
    </div>
  </div>
</div>
{% endblock %}
