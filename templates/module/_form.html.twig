{% form_theme form 'form/_errors_tailwind.html.twig' %}

{{ form_start(form) }}

<div class="space-y-4">

  <div>
    {{ form_label(form.name, 'Module Name', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
    {{ form_widget(form.name, {'attr': {'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-800'}}) }}
    {{ form_errors(form.name) }}
  </div>

  <div>
    {{ form_label(form.code, 'Module Code', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
    {{ form_widget(form.code, {'attr': {'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-800'}}) }}
    {{ form_errors(form.code) }}
  </div>

  <div>
    {{ form_label(form.course, 'Course', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
    {{ form_widget(form.course, {'attr': {'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-800'}}) }}
    {{ form_errors(form.course) }}
  </div>

  <div>
    {{ form_label(form.subject, 'Subject', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
    {{ form_widget(form.subject, {'attr': {'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-800'}}) }}
    {{ form_errors(form.subject) }}
  </div>

  <div>
    {{ form_label(form.instructor, 'Instructor (optional)', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
    {{ form_widget(form.instructor, {'attr': {'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-800'}}) }}
    {{ form_errors(form.instructor) }}
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      {{ form_label(form.yearLevel, 'Year Level', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
      {{ form_widget(form.yearLevel, {'attr': {'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-800'}}) }}
      {{ form_errors(form.yearLevel) }}
    </div>
    <div>
      {{ form_label(form.semester, 'Semester', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
      {{ form_widget(form.semester, {'attr': {'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-800'}}) }}
      {{ form_errors(form.semester) }}
    </div>
  </div>

  <div>
    {{ form_label(form.schedule, 'Schedule (optional)', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
    {{ form_widget(form.schedule, {'attr': {'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-800'}}) }}
    {{ form_errors(form.schedule) }}
  </div>

  <div>
    {{ form_label(form.status, 'Status', {'label_attr': {'class': 'block text-sm font-medium mb-1'}}) }}
    {{ form_widget(form.status, {'attr': {'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-800'}}) }}
    {{ form_errors(form.status) }}
  </div>

</div>

<button class="mt-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 dark:hover:bg-blue-700">
  {{ button_label|default('Save') }}
</button>

{{ form_end(form) }}
