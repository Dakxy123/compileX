<form method="post"
      action="{{ path('app_activity_log_delete', {id: activity_log.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this log entry?');"
      class="inline-block">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ activity_log.id) }}">
  <button class="inline-flex items-center px-3 py-2 text-xs rounded-md border border-red-500 text-red-600 bg-white dark:bg-slate-900 hover:bg-red-50 dark:hover:bg-slate-800">
    Delete
  </button>
</form>
