{% extends 'base.html.twig' %}

{% block title %}Instructor details{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-start justify-between mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Instructor details</h1>
    <div class="flex items-center space-x-2">
      <a href="{{ path('app_instructors_index') }}" class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-800 rounded-md shadow-sm hover:bg-gray-200">Back</a>
      <a href="{{ path('app_instructors_edit', {'id': instructor.id}) }}" class="inline-flex items-center px-4 py-2 bg-yellow-500 text-white rounded-md shadow-sm hover:bg-yellow-600">Edit</a>
    </div>
  </div>

  <div class="bg-white shadow-sm sm:rounded-lg border border-gray-200">
    <div class="px-4 py-5 sm:p-6">
      <dl class="grid grid-cols-1 sm:grid-cols-3 gap-x-6 gap-y-4">
        <dt class="text-sm font-medium text-gray-500">ID</dt>
        <dd class="sm:col-span-2 text-sm text-gray-900">{{ instructor.id }}</dd>

        <dt class="text-sm font-medium text-gray-500">First name</dt>
        <dd class="sm:col-span-2 text-sm text-gray-900">{{ instructor.firstName }}</dd>

        <dt class="text-sm font-medium text-gray-500">Middle name</dt>
        <dd class="sm:col-span-2 text-sm text-gray-900">{{ instructor.middleName|default('—') }}</dd>

        <dt class="text-sm font-medium text-gray-500">Last name</dt>
        <dd class="sm:col-span-2 text-sm text-gray-900">{{ instructor.lastName }}</dd>

        <dt class="text-sm font-medium text-gray-500">Email</dt>
        <dd class="sm:col-span-2 text-sm text-gray-900">{{ instructor.email }}</dd>

        <dt class="text-sm font-medium text-gray-500">Bio</dt>
        <dd class="sm:col-span-2 text-sm text-gray-700">{{ instructor.bio|default('No bio provided') }}</dd>

        <dt class="text-sm font-medium text-gray-500">Experties</dt>
        <dd class="sm:col-span-2 text-sm text-gray-900">{{ instructor.experties|default('—') }}</dd>

        <dt class="text-sm font-medium text-gray-500">Active</dt>
        <dd class="sm:col-span-2">
          {% if instructor.isActive %}
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Active</span>
          {% else %}
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Inactive</span>
          {% endif %}
        </dd>
      </dl>
    </div>
  </div>
</div>
{% endblock %}
