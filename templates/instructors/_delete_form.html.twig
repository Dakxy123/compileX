<form method="post" action="{{ path('app_instructors_delete', {'id': instructor.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
<script src="https://cdn.tailwindcss.com"></script>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ instructor.id) }}">
    <button type="submit" class="inline-flex items-center px-3 py-1.5 bg-red-600 text-white text-xs font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">
        Delete
    </button>
</form>
