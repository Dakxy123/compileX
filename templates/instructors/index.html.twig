{% extends 'base.html.twig' %}

{% block title %}Instructors index{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<a href="{{ path('admin_dashboard') }}"
   class="inline-flex items-center gap-2 mb-4 px-3 py-2 rounded-md border border-gray-200 bg-white text-gray-800 hover:bg-gray-50 shadow-sm">
  ← Back to Admin
</a>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <header class="mb-4 flex items-center justify-between">
    <h1 class="text-2xl font-semibold text-gray-900">Instructors</h1>
    <div class="flex gap-2">
      <a href="{{ path('app_instructors_new') }}" class="rounded-xl bg-blue-600 px-4 py-2 text-white hover:bg-blue-700">+ Add Instructor</a>
      <a href="{{ path('app_instructors_index') }}" class="rounded-xl border border-slate-200 px-4 py-2">Refresh</a>
    </div>
  </header>

  <div class="rounded-2xl border border-slate-200 bg-white overflow-hidden">
    <div class="px-4 py-3 border-b border-slate-100">
      <form method="get" action="{{ path('app_instructors_index') }}" class="flex flex-wrap items-center gap-2">
        <input
          type="text"
          name="q"
          value="{{ q|default('') }}"
          class="w-full sm:w-auto max-w-xs rounded-xl border border-slate-300 px-3 py-2"
          placeholder="Search instructors..."
        />

        <select name="status" class="rounded-xl border border-slate-300 px-3 py-2">
          <option value="" {{ status is not defined or status is same as('') ? 'selected' : '' }}>All</option>
          <option value="1" {{ status is defined and status == '1' ? 'selected' : '' }}>Active</option>
          <option value="0" {{ status is defined and status == '0' ? 'selected' : '' }}>Inactive</option>
        </select>

        <button class="rounded-xl border border-slate-200 px-3 py-2 hover:bg-slate-50" type="submit">Filter</button>

        <a
          class="rounded-xl border border-slate-200 px-3 py-2 hover:bg-slate-50"
          href="{{ path('app_instructors_export', { q: q|default(''), status: status|default('') }) }}"
        >Export</a>
      </form>
    </div>

    <table class="min-w-full text-sm">
      <thead class="bg-slate-50 text-left">
        <tr>
          <th class="px-4 py-2">ID</th>
          <th class="px-4 py-2">First name</th>
          <th class="px-4 py-2">Middle name</th>
          <th class="px-4 py-2">Last name</th>
          <th class="px-4 py-2">Email</th>
          <th class="px-4 py-2">Active</th>
          <th class="px-4 py-2 text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for instructor in instructors %}
          <tr class="{{ loop.index is odd ? 'bg-white' : 'bg-slate-50/50' }}">
            <td class="px-4 py-2 text-slate-700">{{ instructor.id }}</td>
            <td class="px-4 py-2 font-medium text-slate-900">{{ instructor.firstName }}</td>
            <td class="px-4 py-2 text-slate-700">{{ instructor.middleName|default('—') }}</td>
            <td class="px-4 py-2 text-slate-700">{{ instructor.lastName }}</td>
            <td class="px-4 py-2 text-slate-700">{{ instructor.email }}</td>
            <td class="px-4 py-2">
              {% if instructor.isActive %}
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Yes</span>
              {% else %}
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">No</span>
              {% endif %}
            </td>
            <td class="px-4 py-2 text-right">
              <a class="text-blue-600 hover:underline" href="{{ path('app_instructors_show', {'id': instructor.id}) }}">View</a>
              <span class="mx-1 text-slate-400">·</span>
              <a class="text-yellow-600 hover:underline" href="{{ path('app_instructors_edit', {'id': instructor.id}) }}">Edit</a>
              <span class="mx-1 text-slate-400">·</span>
              <form method="post" action="{{ path('app_instructors_delete', {'id': instructor.id}) }}" class="inline" onsubmit="return confirm('Delete this instructor?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ instructor.id) }}">
                <button class="text-rose-600 hover:underline" type="submit">Delete</button>
              </form>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="7" class="px-4 py-6 text-center text-slate-500">No records found</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}