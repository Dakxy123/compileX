{% extends 'base.html.twig' %}

{% block title %}Instructors index{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Instructors</h1>
    <a href="{{ path('app_instructors_new') }}" class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md shadow-sm hover:bg-green-700 focus:outline-none">Create new</a>
  </div>

  <div class="overflow-hidden rounded-lg border border-gray-200 shadow-sm">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Id</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">First name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Middle name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last name</th><th></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Active</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        {% for instructor in instructors %}
        <tr class="odd:bg-white even:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ instructor.id }}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ instructor.firstName }}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ instructor.middleName }}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ instructor.lastName }}</td><td></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            {% if instructor.isActive %}
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">Yes</span>
            {% else %}
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">No</span>
            {% endif %}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
            <a href="{{ path('app_instructors_show', {'id': instructor.id}) }}" class="inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-xs rounded-md hover:bg-blue-700">View</a>
            <a href="{{ path('app_instructors_edit', {'id': instructor.id}) }}" class="inline-flex items-center px-3 py-1.5 bg-yellow-500 text-white text-xs rounded-md hover:bg-yellow-600">Edit</a>
            <form method="post" action="{{ path('app_instructors_delete', {'id': instructor.id}) }}" onsubmit="return confirm('Are you sure you want to delete this instructor?');" class="inline-block">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ instructor.id) }}">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="inline-flex items-center px-3 py-1.5 bg-red-600 text-white text-xs rounded-md hover:bg-red-700">Delete</button>
            </form>
          </td>
        </tr>
        {% else %}
        <tr>
          <td colspan="10" class="px-6 py-8 text-center text-sm text-gray-500">No records found</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
