{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard — CompileX{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = { darkMode: 'class' };
</script>

<div id="app" class="flex min-h-screen bg-slate-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100">

  <aside id="sidebar"
         class="fixed top-0 left-0 z-50 h-full w-64 bg-slate-800 text-white dark:bg-gray-800 transform -translate-x-full transition-transform duration-300 flex flex-col overflow-y-auto">
    <div class="px-6 py-5 border-b border-slate-700 dark:border-gray-700 flex items-center justify-between">
      <h2 class="text-xl font-semibold tracking-tight">CompileX Admin</h2>
      <button class="text-2xl md:text-3xl focus:outline-none" onclick="toggleSidebar()">×</button>
    </div>

    <nav class="flex-1 px-4 py-4 space-y-1">
      <a href="{{ path('app_admin') }}"
         class="block px-3 py-2 rounded-md font-medium bg-slate-700 dark:bg-gray-700 hover:bg-slate-600 dark:hover:bg-gray-600">
        Admin Dashboard
      </a>
      <a href="{{ path('app_user_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Users
      </a>
      <a href="{{ path('app_course_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Courses
      </a>
      <a href="{{ path('app_subject_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Subjects
      </a>
      <a href="{{ path('app_module_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Modules
      </a>
      <a href="{{ path('app_enrollment_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Enrollments
      </a>
      <a href="{{ path('app_instructor_assignment_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Instructor Assignments
      </a>
      <a href="{{ path('app_instructor_application_admin_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Instructor Applications
      </a>
      <a href="{{ path('app_activity_log_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Activity Logs
      </a>
      <a href="{{ path('app_student_profile_index') }}"
         class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
        Students
      </a>

      <div class="pt-4 border-t border-slate-700 dark:border-gray-600 mt-4">
        <button id="mode-toggle"
                class="mt-2 block w-full text-left px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Toggle Light/Dark Mode
        </button>
        <a href="/" class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Back to Home
        </a>
        <a href="{{ path('app_logout') }}"
           class="block px-3 py-2 rounded-md font-medium text-red-500 hover:bg-red-700">
          Logout
        </a>
      </div>
    </nav>
  </aside>

  <div class="flex-1 flex flex-col min-h-screen">
    <header class="fixed top-0 left-0 right-0 z-40 bg-slate-800 text-white dark:bg-gray-800 flex items-center justify-between px-6 py-3 shadow-md">
      <h1 class="text-xl font-semibold text-blue-400 dark:text-blue-300 tracking-tight">CompileX</h1>
      <button class="text-2xl md:text-3xl focus:outline-none" aria-label="Toggle menu" onclick="toggleSidebar()">
        <span id="burger-icon">&#9776;</span>
      </button>
    </header>

    <div class="h-16"></div>

    <main id="main-content" class="flex-1 p-8 space-y-10">

      <div class="space-y-3">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
          <div>
            <h1 class="text-3xl font-semibold">Admin Dashboard</h1>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
              Quick overview of users, courses, subjects, student progress, modules, enrollments, instructor assignments,
              activity logs, and contact messages.
            </p>
          </div>
        </div>

        <div class="flex flex-wrap gap-2 text-xs md:text-sm">
          <a href="#overview"
             class="px-3 py-1 rounded-full border border-slate-300 dark:border-gray-600 hover:bg-slate-100 dark:hover:bg-gray-800">
            Overview
          </a>
          <a href="#latest"
             class="px-3 py-1 rounded-full border border-slate-300 dark:border-gray-600 hover:bg-slate-100 dark:hover:bg-gray-800">
            Latest Activity
          </a>
          <a href="#contacts"
             class="px-3 py-1 rounded-full border border-slate-300 dark:border-gray-600 hover:bg-slate-100 dark:hover:bg-gray-800">
            Contact Messages
          </a>
        </div>
      </div>

      <section id="overview" class="space-y-6 scroll-mt-20">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
          Overview
        </h2>

        <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">

          <div class="bg-slate-100 dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm p-5 flex flex-col gap-4">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Users</h3>
              <a href="{{ path('app_user_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                Manage →
              </a>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Total Users</p>
                <p class="text-3xl font-extrabold text-gray-900 dark:text-gray-50">
                  {{ totalUsers }}
                </p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Admins</p>
                <p class="text-3xl font-extrabold text-indigo-700 dark:text-indigo-300">
                  {{ totalAdmins }}
                </p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Instructors</p>
                <p class="text-3xl font-extrabold text-emerald-700 dark:text-emerald-300">
                  {{ totalInstructors }}
                </p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Student Profiles</p>
                <p class="text-3xl font-extrabold text-sky-700 dark:text-sky-300">
                  {{ totalStudentProfiles }}
                </p>
              </div>
            </div>
          </div>

          <div class="bg-slate-100 dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm p-5 flex flex-col gap-4">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Courses, Subjects & Modules</h3>
              <div class="flex gap-2 text-xs">
                <a href="{{ path('app_course_index') }}" class="text-blue-600 dark:text-blue-400 hover:underline">Courses →</a>
                <a href="{{ path('app_subject_index') }}" class="text-blue-600 dark:text-blue-400 hover:underline">Subjects →</a>
                <a href="{{ path('app_module_index') }}" class="text-blue-600 dark:text-blue-400 hover:underline">Modules →</a>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Total Courses</p>
                <p class="text-3xl font-extrabold text-gray-900 dark:text-gray-50">
                  {{ totalCourses }}
                </p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Active Courses</p>
                <p class="text-3xl font-extrabold text-emerald-700 dark:text-emerald-300">
                  {{ activeCourses }}
                </p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Inactive Courses</p>
                <p class="text-3xl font-extrabold text-amber-700 dark:text-amber-300">
                  {{ inactiveCourses }}
                </p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Total Subjects</p>
                <p class="text-3xl font-extrabold text-gray-900 dark:text-gray-50">
                  {{ totalSubjects }}
                </p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Total Modules</p>
                <p class="text-3xl font-extrabold text-purple-700 dark:text-purple-300">
                  {{ totalModules }}
                </p>
              </div>
            </div>
          </div>

          <div class="bg-slate-100 dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm p-5 flex flex-col gap-4">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Student Progress</h3>
              <a href="{{ path('app_student_profile_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                Manage →
              </a>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Ongoing</p>
                <p class="text-3xl font-extrabold text-blue-700 dark:text-blue-300">
                  {{ ongoingStudents }}
                </p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Completed</p>
                <p class="text-3xl font-extrabold text-green-700 dark:text-green-300">
                  {{ completedStudents }}
                </p>
              </div>
            </div>

            <p class="text-xs text-gray-600 dark:text-gray-400">
              Based on Student Profiles and their current status.
            </p>
          </div>

          <div class="bg-slate-100 dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm p-5 flex flex-col gap-4">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Enrollments</h3>
              <a href="{{ path('app_enrollment_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                Manage →
              </a>
            </div>

            <div class="space-y-3">
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Total Enrollments</p>
                <p class="text-3xl font-extrabold text-rose-700 dark:text-rose-300">
                  {{ totalEnrollments }}
                </p>
              </div>
            </div>

            <p class="text-xs text-gray-600 dark:text-gray-400">
              Total links between students and subjects/courses.
            </p>
          </div>

          <div class="bg-slate-100 dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm p-5 flex flex-col gap-4">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Instructor Assignments</h3>
              <a href="{{ path('app_instructor_assignment_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                Manage →
              </a>
            </div>

            <div class="space-y-3">
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Total Assignments</p>
                <p class="text-3xl font-extrabold text-orange-700 dark:text-orange-300">
                  {{ totalInstructorAssignments }}
                </p>
              </div>
            </div>

            <p class="text-xs text-gray-600 dark:text-gray-400">
              Total instructor–subject links currently defined.
            </p>
          </div>

          <div class="bg-slate-100 dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm p-5 flex flex-col gap-4">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">Activity Logs</h3>
              <a href="{{ path('app_activity_log_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                View logs →
              </a>
            </div>

            <div class="space-y-3">
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-gray-600 dark:text-gray-400">Total Activity Logs</p>
                <p class="text-3xl font-extrabold text-fuchsia-700 dark:text-fuchsia-300">
                  {{ totalActivityLogs }}
                </p>
              </div>
            </div>

            <p class="text-xs text-gray-600 dark:text-gray-400">
              Recorded actions performed by users across the system.
            </p>
          </div>

        </div>
      </section>

      <section id="latest" class="space-y-6 scroll-mt-20">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
          Latest Activity
        </h2>

        <div class="grid gap-6 lg:grid-cols-2">

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm">
            <div class="px-4 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Latest Users</h3>
              <a href="{{ path('app_user_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                View all
              </a>
            </div>
            <table class="min-w-full text-sm">
              <thead class="bg-slate-50 dark:bg-gray-900">
                <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                  <th class="px-4 py-2">Email</th>
                  <th class="px-4 py-2">Role</th>
                </tr>
              </thead>
              <tbody>
                {% for u in latestUsers %}
                  {% set allRoles = u.roles is iterable ? u.roles : [] %}
                  {% set mainRoles = allRoles|filter(r => r != 'ROLE_USER') %}
                  {% set displayRole = mainRoles is not empty ? mainRoles|join(', ') : 'ROLE_USER' %}
                  <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                    <td class="px-4 py-2">{{ u.email }}</td>
                    <td class="px-4 py-2 text-xs">{{ displayRole }}</td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="2" class="px-4 py-3 text-xs text-gray-500 dark:text-gray-400">
                      No users yet.
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm">
            <div class="px-4 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Latest Courses</h3>
              <a href="{{ path('app_course_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                View all
              </a>
            </div>
            <table class="min-w-full text-sm">
              <thead class="bg-slate-50 dark:bg-gray-900">
                <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                  <th class="px-4 py-2">Name</th>
                  <th class="px-4 py-2">Status</th>
                </tr>
              </thead>
              <tbody>
                {% for c in latestCourses %}
                  <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                    <td class="px-4 py-2">
                      {{ c.name|length > 30 ? c.name|slice(0, 30) ~ '…' : c.name }}
                    </td>
                    <td class="px-4 py-2">
                      {% if c.isActive() %}
                        <span class="inline-flex items-center px-2 py-0.5 text-xs font-semibold rounded-full bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300">
                          Active
                        </span>
                      {% else %}
                        <span class="inline-flex items-center px-2 py-0.5 text-xs font-semibold rounded-full bg-gray-200 text-gray-700 dark:bg-gray-700 dark:text-gray-300">
                          Inactive
                        </span>
                      {% endif %}
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="2" class="px-4 py-3 text-xs text-gray-500 dark:text-gray-400">
                      No courses yet.
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm">
            <div class="px-4 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Latest Subjects</h3>
              <a href="{{ path('app_subject_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                View all
              </a>
            </div>
            <table class="min-w-full text-sm">
              <thead class="bg-slate-50 dark:bg-gray-900">
                <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                  <th class="px-4 py-2">Code</th>
                  <th class="px-4 py-2">Name</th>
                  <th class="px-4 py-2">Course</th>
                </tr>
              </thead>
              <tbody>
                {% for s in latestSubjects %}
                  <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                    <td class="px-4 py-2 font-mono text-xs">{{ s.code }}</td>
                    <td class="px-4 py-2">
                      {{ s.name|length > 25 ? s.name|slice(0, 25) ~ '…' : s.name }}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {{ s.course ? (s.course.name|length > 20 ? s.course.name|slice(0,20) ~ '…' : s.course.name) : '—' }}
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="3" class="px-4 py-3 text-xs text-gray-500 dark:text-gray-400">
                      No subjects yet.
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm">
            <div class="px-4 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Latest Student Profiles</h3>
              <a href="{{ path('app_student_profile_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                View all
              </a>
            </div>
            <table class="min-w-full text-sm">
              <thead class="bg-slate-50 dark:bg-gray-900">
                <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                  <th class="px-4 py-2">User</th>
                  <th class="px-4 py-2">Course</th>
                  <th class="px-4 py-2">Status</th>
                </tr>
              </thead>
              <tbody>
                {% for sp in latestStudentProfiles %}
                  <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                    <td class="px-4 py-2 text-xs">
                      {{ sp.user ? sp.user.email : '—' }}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {{ sp.course ? (sp.course.name|length > 20 ? sp.course.name|slice(0,20) ~ '…' : sp.course.name) : '—' }}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {{ sp.status }}
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="3" class="px-4 py-3 text-xs text-gray-500 dark:text-gray-400">
                      No student profiles yet.
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm">
            <div class="px-4 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Latest Modules</h3>
              <a href="{{ path('app_module_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                View all
              </a>
            </div>
            <table class="min-w-full text-sm">
              <thead class="bg-slate-50 dark:bg-gray-900">
                <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                  <th class="px-4 py-2">Code</th>
                  <th class="px-4 py-2">Title</th>
                  <th class="px-4 py-2">Subject</th>
                </tr>
              </thead>
              <tbody>
                {% for m in latestModules %}
                  {% set code = m.code is defined ? m.code : (m.moduleCode is defined ? m.moduleCode : '—') %}
                  {% set titleCandidate = m.name is defined ? m.name : (m.title is defined ? m.title : '') %}
                  {% set title = titleCandidate ? (titleCandidate|length > 25 ? titleCandidate|slice(0,25) ~ '…' : titleCandidate) : '—' %}
                  {% set subjectName = '—' %}
                  {% if m.subject is defined and m.subject %}
                    {% set rawSubjectName = m.subject.name is defined ? m.subject.name : '' %}
                    {% set subjectName = rawSubjectName ? (rawSubjectName|length > 20 ? rawSubjectName|slice(0,20) ~ '…' : rawSubjectName) : '—' %}
                  {% endif %}

                  <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                    <td class="px-4 py-2 font-mono text-xs">
                      {{ code }}
                    </td>
                    <td class="px-4 py-2">
                      {{ title }}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {{ subjectName }}
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="3" class="px-4 py-3 text-xs text-gray-500 dark:text-gray-400">
                      No modules yet.
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm">
            <div class="px-4 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Latest Enrollments</h3>
              <a href="{{ path('app_enrollment_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                View all
              </a>
            </div>
            <table class="min-w-full text-sm">
              <thead class="bg-slate-50 dark:bg-gray-900">
                <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                  <th class="px-4 py-2">Student</th>
                  <th class="px-4 py-2">Subject</th>
                  <th class="px-4 py-2">Course</th>
                  <th class="px-4 py-2">Status</th>
                </tr>
              </thead>
              <tbody>
                {% for e in latestEnrollments %}
                  <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                    <td class="px-4 py-2 text-xs">
                      {{ e.studentProfile and e.studentProfile.user ? e.studentProfile.user.email : '—' }}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {{ e.subject ? (e.subject.name|length > 20 ? e.subject.name|slice(0,20) ~ '…' : e.subject.name) : '—' }}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {{ e.subject and e.subject.course ? (e.subject.course.name|length > 20 ? e.subject.course.name|slice(0,20) ~ '…' : e.subject.course.name) : '—' }}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {{ e.status ?? '—' }}
                    </td>
                  </tr>
