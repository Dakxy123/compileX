              </tbody>
            </table>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm">
            <div class="px-4 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Latest Instructor Assignments</h3>
              <a href="{{ path('app_instructor_assignment_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                View all
              </a>
            </div>
            <table class="min-w-full text-sm">
              <thead class="bg-slate-50 dark:bg-gray-900">
                <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                  <th class="px-4 py-2">Instructor</th>
                  <th class="px-4 py-2">Subject</th>
                  <th class="px-4 py-2">Course</th>
                  <th class="px-4 py-2">Role</th>
                </tr>
              </thead>
              <tbody>
                {% for ia in latestInstructorAssignments %}
                  {% set instr = ia.instructor is defined ? ia.instructor : null %}
                  {% set subj = ia.subject is defined ? ia.subject : null %}
                  {% set course = subj and subj.course is defined ? subj.course : null %}
                  {% set roleValue = ia.role is defined ? ia.role : (ia.assignmentRole is defined ? ia.assignmentRole : null) %}

                  <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                    <td class="px-4 py-2 text-xs">
                      {% if instr %}
                        {{ instr.email ?? '—' }}
                      {% else %}
                        —
                      {% endif %}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {% if subj %}
                        {{ subj.code is defined ? subj.code ~ ' — ' : '' }}
                        {{ subj.name is defined
                            ? (subj.name|length > 20 ? subj.name|slice(0,20) ~ '…' : subj.name)
                            : '' }}
                      {% else %}
                        —
                      {% endif %}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {% if course %}
                        {{ course.name is defined
                            ? (course.name|length > 20 ? course.name|slice(0,20) ~ '…' : course.name)
                            : '—' }}
                      {% else %}
                        —
                      {% endif %}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {{ roleValue ?? '—' }}
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="4" class="px-4 py-3 text-xs text-gray-500 dark:text-gray-400">
                      No instructor assignments yet.
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm">
            <div class="px-4 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Latest Activity Logs</h3>
              <a href="{{ path('app_activity_log_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">
                View all
              </a>
            </div>
            <table class="min-w-full text-sm">
              <thead class="bg-slate-50 dark:bg-gray-900">
                <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                  <th class="px-4 py-2">User</th>
                  <th class="px-4 py-2">Action</th>
                  <th class="px-4 py-2">Entity</th>
                  <th class="px-4 py-2">Date</th>
                </tr>
              </thead>
              <tbody>
                {% for al in latestActivityLogs %}
                  {% set logUser = al.user is defined ? al.user : null %}
                  {% set entityType = al.entityType is defined ? al.entityType : null %}
                  {% set description = al.description is defined ? al.description : null %}
                  <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                    <td class="px-4 py-2 text-xs">
                      {% if logUser %}
                        {{ logUser.email ?? '—' }}
                      {% else %}
                        —
                      {% endif %}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {{ al.action is defined and al.action ? al.action : '—' }}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {% if entityType or description %}
                        {{ entityType ?? '' }}{% if entityType and description %} — {% endif %}
                        {% if description %}
                          {{ description|length > 25 ? description|slice(0,25) ~ '…' : description }}
                        {% endif %}
                      {% else %}
                        —
                      {% endif %}
                    </td>
                    <td class="px-4 py-2 text-xs">
                      {% if al.createdAt is defined and al.createdAt %}
                        {{ al.createdAt|date('Y-m-d H:i') }}
                      {% else %}
                        —
                      {% endif %}
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="4" class="px-4 py-3 text-xs text-gray-500 dark:text-gray-400">
                      No activity logs yet.
                    </td>
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>

        </div>
      </section>

      <section id="contacts" class="space-y-6 scroll-mt-20">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
            Contact Messages
          </h2>
          <span class="text-xs px-3 py-1 rounded-full bg-slate-100 dark:bg-gray-800 border border-slate-200 dark:border-gray-700 text-gray-700 dark:text-gray-300">
            Total messages: {{ totalContactMessages }}
          </span>
        </div>

        <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-xl shadow-sm">
          <div class="px-4 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
            <h3 class="text-sm font-semibold text-gray-800 dark:text-gray-100">Latest Contact Messages</h3>
          </div>

          <table class="min-w-full text-sm">
            <thead class="bg-slate-50 dark:bg-gray-900">
              <tr class="text-left text-xs uppercase tracking-wide text-gray-500 dark:text-gray-400">
                <th class="px-4 py-2">From</th>
                <th class="px-4 py-2">Email</th>
                <th class="px-4 py-2">Subject</th>
                <th class="px-4 py-2">Message</th>
                <th class="px-4 py-2">Date</th>
              </tr>
            </thead>
            <tbody>
              {% for m in latestContactMessages %}
                <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                  <td class="px-4 py-2 text-xs">
                    {{ m.name ?? '—' }}
                  </td>
                  <td class="px-4 py-2 text-xs">
                    {{ m.email ?? '—' }}
                  </td>
                  <td class="px-4 py-2 text-xs">
                    {{ m.subject is defined and m.subject ? (m.subject|length > 25 ? m.subject|slice(0,25) ~ '…' : m.subject) : '—' }}
                  </td>
                  <td class="px-4 py-2 text-xs">
                    {% set msg = m.message is defined ? m.message : '' %}
                    {{ msg|length > 40 ? msg|slice(0,40) ~ '…' : msg }}
                  </td>
                  <td class="px-4 py-2 text-xs">
                    {% if m.createdAt is defined and m.createdAt %}
                      {{ m.createdAt|date('Y-m-d H:i') }}
                    {% else %}
                      —
                    {% endif %}
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="5" class="px-4 py-3 text-xs text-gray-500 dark:text-gray-400">
                    No contact messages yet.
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </section>

    </main>
  </div>
</div>

<script>
const sidebar = document.getElementById('sidebar');
const burgerIcon = document.getElementById('burger-icon');

function toggleSidebar() {
  sidebar.classList.toggle('-translate-x-full');
  if (burgerIcon) {
    burgerIcon.innerHTML = sidebar.classList.contains('-translate-x-full') ? '&#9776;' : '&times;';
  }
}

const DARK_KEY = 'compilex-dark-mode';
const modeToggle = document.getElementById('mode-toggle');

function loadInitialTheme() {
  const saved = localStorage.getItem(DARK_KEY);
  document.documentElement.classList.toggle('dark', saved === 'true');
}

if (modeToggle) {
  modeToggle.addEventListener('click', e => {
    e.stopPropagation();
    const isDark = document.documentElement.classList.contains('dark');
    document.documentElement.classList.toggle('dark', !isDark);
    localStorage.setItem(DARK_KEY, (!isDark).toString());
  });
}

loadInitialTheme();

document.addEventListener('click', e => {
  if (!sidebar.contains(e.target) &&
      !e.target.closest('button[aria-label="Toggle menu"]') &&
      !e.target.closest('#burger-icon') &&
      !sidebar.classList.contains('-translate-x-full')) {
    toggleSidebar();
  }
});

document.addEventListener('keydown', e => {
  if (e.key === 'Escape' && !sidebar.classList.contains('-translate-x-full')) {
    toggleSidebar();
  }
});
</script>
{% endblock %}
