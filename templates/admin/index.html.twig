<script>
  const DARK_KEY='compilex-dark-mode';
  const SIDEBAR_KEY='compilex-admin-sidebar-collapsed';
  const app=document.getElementById('app');
  const sidebar=document.getElementById('sidebar');
  const backdrop=document.getElementById('sidebar-backdrop');
  const burgerIcon=document.getElementById('burger-icon');
  const modeTop=document.getElementById('mode-toggle-top');
  const modeSide=document.getElementById('mode-toggle-side');
  const collapseBtn=document.getElementById('collapse-btn');

  function isMobile(){
    return window.matchMedia('(max-width: 767px)').matches;
  }

  function setBodyLock(locked){
    document.body.style.overflow=locked?'hidden':'';
  }

  function openSidebar(){
    if(!isMobile()) return;
    sidebar.classList.remove('sidebar-hidden');
    sidebar.classList.add('sidebar-shown');
    backdrop.classList.remove('hidden');
    setBodyLock(true);
    if(burgerIcon) burgerIcon.innerHTML='&times;';
  }

  function closeSidebar(){
    if(!isMobile()) return;
    sidebar.classList.add('sidebar-hidden');
    sidebar.classList.remove('sidebar-shown');
    backdrop.classList.add('hidden');
    setBodyLock(false);
    if(burgerIcon) burgerIcon.innerHTML='&#9776;';
  }

  function toggleSidebar(){
    if(!isMobile()) return;
    const hidden=sidebar.classList.contains('sidebar-hidden');
    if(hidden) openSidebar(); else closeSidebar();
  }

  function setTheme(isDark){
    document.documentElement.classList.toggle('dark',!!isDark);
    localStorage.setItem(DARK_KEY,(!!isDark).toString());
  }

  function loadInitialTheme(){
    setTheme(localStorage.getItem(DARK_KEY)==='true');
  }

  function toggleTheme(){
    setTheme(!document.documentElement.classList.contains('dark'));
  }

  function loadSidebarCollapsed(){
    const saved=localStorage.getItem(SIDEBAR_KEY)==='true';
    app.classList.toggle('sidebar-collapsed',saved);
  }

  function toggleSidebarCollapsed(){
    if(isMobile()) return;
    app.classList.toggle('sidebar-collapsed');
    localStorage.setItem(SIDEBAR_KEY,app.classList.contains('sidebar-collapsed')?'true':'false');
  }

  if(modeTop) modeTop.addEventListener('click',toggleTheme);
  if(modeSide) modeSide.addEventListener('click',toggleTheme);
  if(collapseBtn) collapseBtn.addEventListener('click',toggleSidebarCollapsed);

  document.addEventListener('keydown',(e)=>{
    if(e.key==='Escape') closeSidebar();
  });

  document.querySelectorAll('#sidebar a').forEach(a=>{
    a.addEventListener('click',()=>closeSidebar());
  });

  window.addEventListener('resize',()=>{
    if(!isMobile()){
      backdrop.classList.add('hidden');
      setBodyLock(false);
      if(burgerIcon) burgerIcon.innerHTML='&#9776;';
      sidebar.classList.remove('sidebar-hidden');
      sidebar.classList.remove('sidebar-shown');
    }else{
      sidebar.classList.add('sidebar-hidden');
      sidebar.classList.remove('sidebar-shown');
      setBodyLock(false);
      if(burgerIcon) burgerIcon.innerHTML='&#9776;';
    }
  });

  const yearEl=document.getElementById('year');
  if(yearEl) yearEl.textContent=String(new Date().getFullYear());

  loadInitialTheme();
  loadSidebarCollapsed();
  closeSidebar();
</script>
