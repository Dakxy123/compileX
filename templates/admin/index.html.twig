{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard — CompileX{% endblock %}

{% block stylesheets %}
<style>
  html{scroll-behavior:smooth}
  .sidebar-hidden{transform:translateX(-100%)}
  .sidebar-shown{transform:translateX(0)}
  .sidebar{width:18rem}
  .sidebar-collapsed .sidebar{width:5.25rem}
  .sidebar-collapsed .nav-text{display:none}
  .sidebar-collapsed .nav-group-title{display:none}
  .sidebar-collapsed .brand-sub{display:none}
  .sidebar-collapsed .nav-item{justify-content:center}
  .sidebar-collapsed .nav-item{gap:0}
  @media (min-width:768px){
    .content-wrap{padding-left:18rem}
    .sidebar-collapsed .content-wrap{padding-left:5.25rem}
  }
  @media (max-width:767px){
    .content-wrap{padding-left:0}
  }
</style>
{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config={darkMode:'class'};
</script>

{% set currentRoute = app.request.attributes.get('_route') %}

<div id="app" class="min-h-screen bg-slate-50 text-slate-900 dark:bg-gray-900 dark:text-gray-100">

  <header class="fixed top-0 left-0 right-0 z-50 h-16 bg-slate-800/95 text-white dark:bg-gray-800/95 backdrop-blur border-b border-slate-700/60 dark:border-gray-700/60">
    <div class="h-16 px-4 md:px-6 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <button id="burger-btn" class="md:hidden text-2xl leading-none px-2 py-1 rounded hover:bg-white/10 focus:outline-none" aria-label="Toggle menu" onclick="toggleSidebar()">
          <span id="burger-icon">&#9776;</span>
        </button>

        <button id="collapse-btn" class="hidden md:inline-flex items-center justify-center w-10 h-10 rounded-lg hover:bg-white/10 border border-transparent hover:border-white/10" aria-label="Collapse sidebar" type="button">
          ≡
        </button>

        <div class="flex items-center gap-2">
          <div class="w-9 h-9 rounded-xl bg-white/10 border border-white/10 flex items-center justify-center font-bold text-blue-200">
            CX
          </div>
          <div class="leading-tight">
            <div class="text-sm font-semibold tracking-tight text-blue-200">CompileX</div>
            <div class="text-xs text-slate-300 brand-sub">Admin Dashboard</div>
          </div>
        </div>
      </div>

      <div class="flex items-center gap-2">
        <button id="mode-toggle-top"
                class="hidden sm:inline-flex items-center gap-2 px-3 py-1.5 rounded-lg border border-slate-600/70 bg-slate-700/40 hover:bg-slate-700 text-slate-100 text-sm">
          Mode
        </button>

        <a href="/"
           class="hidden sm:inline-flex px-3 py-1.5 rounded-lg border border-slate-600/70 bg-slate-700/20 hover:bg-slate-700 text-slate-100 text-sm">
          Home
        </a>

        <a href="{{ path('app_logout') }}"
           class="inline-flex px-3 py-1.5 rounded-lg bg-red-500/90 hover:bg-red-600 text-white text-sm">
          Logout
        </a>
      </div>
    </div>
  </header>

  <div id="sidebar-backdrop" class="fixed inset-0 z-40 hidden bg-black/40 backdrop-blur-sm md:hidden" onclick="closeSidebar()"></div>

  <aside id="sidebar"
         class="sidebar fixed top-16 left-0 z-50 h-[calc(100vh-4rem)] bg-slate-800 text-white dark:bg-gray-800 border-r border-slate-700/60 dark:border-gray-700/60 overflow-y-auto transition-all duration-300 sidebar-hidden md:sidebar-shown md:transform-none md:block">
    <div class="px-5 py-4 flex items-center justify-between border-b border-slate-700/60 dark:border-gray-700/60">
      <div class="text-sm font-semibold tracking-tight">Navigation</div>
      <button class="md:hidden text-2xl leading-none px-2 py-1 rounded hover:bg-white/10 focus:outline-none" onclick="closeSidebar()" aria-label="Close menu">×</button>
    </div>

    <div class="px-4 py-4 space-y-6">

      <div class="space-y-1">
        <div class="px-2 text-xs uppercase tracking-wider text-slate-300/90 nav-group-title">Dashboards</div>

        <a href="{{ path('app_admin') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                  {% if currentRoute == 'app_admin' %} bg-white/10 border border-white/10 {% else %} hover:bg-white/10 {% endif %}"
           title="Admin Dashboard">
          <span class="w-2.5 h-2.5 rounded-full bg-blue-400"></span>
          <span class="nav-text flex-1">Admin Dashboard</span>
        </a>

        <a href="{{ path('app_instructor_dashboard') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium hover:bg-white/10"
           title="Instructor Dashboard">
          <span class="w-2.5 h-2.5 rounded-full bg-violet-300"></span>
          <span class="nav-text flex-1">Instructor Dashboard</span>
        </a>

        <a href="{{ path('app_student_dashboard') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium hover:bg-white/10"
           title="Student Dashboard">
          <span class="w-2.5 h-2.5 rounded-full bg-sky-300"></span>
          <span class="nav-text flex-1">Student Dashboard</span>
        </a>
      </div>

      <div class="space-y-1">
        <div class="px-2 text-xs uppercase tracking-wider text-slate-300/90 nav-group-title">Management</div>

        <a href="{{ path('app_user_index') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                  {% if currentRoute starts with 'app_user_' %} bg-white/10 border border-white/10 {% else %} hover:bg-white/10 {% endif %}"
           title="Users">
          <span class="w-2.5 h-2.5 rounded-full bg-indigo-400"></span>
          <span class="nav-text flex-1">Users</span>
        </a>

        <a href="{{ path('app_student_profile_index') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                  {% if currentRoute starts with 'app_student_profile_' %} bg-white/10 border border-white/10 {% else %} hover:bg-white/10 {% endif %}"
           title="Students">
          <span class="w-2.5 h-2.5 rounded-full bg-sky-400"></span>
          <span class="nav-text flex-1">Students</span>
        </a>

        <a href="{{ path('app_instructor_application_admin_index') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                  {% if currentRoute starts with 'app_instructor_application_admin_' %} bg-white/10 border border-white/10 {% else %} hover:bg-white/10 {% endif %}"
           title="Instructor Applications">
          <span class="w-2.5 h-2.5 rounded-full bg-violet-400"></span>
          <span class="nav-text flex-1">Instructor Applications</span>
        </a>
      </div>

      <div class="space-y-1">
        <div class="px-2 text-xs uppercase tracking-wider text-slate-300/90 nav-group-title">Academic</div>

        <a href="{{ path('app_course_index') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                  {% if currentRoute starts with 'app_course_' %} bg-white/10 border border-white/10 {% else %} hover:bg-white/10 {% endif %}"
           title="Courses">
          <span class="w-2.5 h-2.5 rounded-full bg-emerald-400"></span>
          <span class="nav-text flex-1">Courses</span>
        </a>

        <a href="{{ path('app_subject_index') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                  {% if currentRoute starts with 'app_subject_' %} bg-white/10 border border-white/10 {% else %} hover:bg-white/10 {% endif %}"
           title="Subjects">
          <span class="w-2.5 h-2.5 rounded-full bg-amber-400"></span>
          <span class="nav-text flex-1">Subjects</span>
        </a>

        <a href="{{ path('app_module_index') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                  {% if currentRoute starts with 'app_module_' %} bg-white/10 border border-white/10 {% else %} hover:bg-white/10 {% endif %}"
           title="Modules">
          <span class="w-2.5 h-2.5 rounded-full bg-purple-400"></span>
          <span class="nav-text flex-1">Modules</span>
        </a>

        <a href="{{ path('app_enrollment_index') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                  {% if currentRoute starts with 'app_enrollment_' %} bg-white/10 border border-white/10 {% else %} hover:bg-white/10 {% endif %}"
           title="Enrollments">
          <span class="w-2.5 h-2.5 rounded-full bg-rose-400"></span>
          <span class="nav-text flex-1">Enrollments</span>
        </a>

        <a href="{{ path('app_instructor_assignment_index') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                  {% if currentRoute starts with 'app_instructor_assignment_' %} bg-white/10 border border-white/10 {% else %} hover:bg-white/10 {% endif %}"
           title="Instructor Assignments">
          <span class="w-2.5 h-2.5 rounded-full bg-orange-400"></span>
          <span class="nav-text flex-1">Instructor Assignments</span>
        </a>
      </div>

      <div class="space-y-1">
        <div class="px-2 text-xs uppercase tracking-wider text-slate-300/90 nav-group-title">Logs</div>

        <a href="{{ path('app_activity_log_index') }}"
           class="nav-item group flex items-center gap-3 px-3 py-2 rounded-lg font-medium
                  {% if currentRoute starts with 'app_activity_log_' %} bg-white/10 border border-white/10 {% else %} hover:bg-white/10 {% endif %}"
           title="Activity Logs">
          <span class="w-2.5 h-2.5 rounded-full bg-fuchsia-400"></span>
          <span class="nav-text flex-1">Activity Logs</span>
        </a>
      </div>

      <div class="pt-4 border-t border-slate-700/60 dark:border-gray-700/60 space-y-2">
        <button id="mode-toggle-side"
                class="w-full text-left px-3 py-2 rounded-lg font-medium hover:bg-white/10 border border-transparent hover:border-white/10">
          Toggle Mode
        </button>

        <a href="/"
           class="block px-3 py-2 rounded-lg font-medium hover:bg-white/10 border border-transparent hover:border-white/10">
          Back to Home
        </a>
      </div>

    </div>
  </aside>

  <main class="content-wrap pt-16">
    <div class="px-4 md:px-8 py-8 max-w-7xl mx-auto space-y-10">

      <div class="space-y-4">
        <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-3">
          <div>
            <h1 class="text-3xl md:text-4xl font-semibold tracking-tight">Admin Dashboard</h1>
            <p class="text-sm md:text-base text-slate-600 dark:text-gray-400 mt-2 max-w-3xl">
              Quick overview of users, courses, subjects, student progress, modules, enrollments, instructor assignments, activity logs, and contact messages.
            </p>
          </div>

          <div class="flex flex-wrap gap-2 text-xs md:text-sm">
            <a href="#overview"
               class="px-3 py-1.5 rounded-full border border-slate-300 dark:border-gray-700 hover:bg-white dark:hover:bg-gray-800 bg-white/60 dark:bg-gray-800/40">
              Overview
            </a>
            <a href="#latest"
               class="px-3 py-1.5 rounded-full border border-slate-300 dark:border-gray-700 hover:bg-white dark:hover:bg-gray-800 bg-white/60 dark:bg-gray-800/40">
              Latest Activity
            </a>
            <a href="#contacts"
               class="px-3 py-1.5 rounded-full border border-slate-300 dark:border-gray-700 hover:bg-white dark:hover:bg-gray-800 bg-white/60 dark:bg-gray-800/40">
              Contact Messages
            </a>
          </div>
        </div>
      </div>

      <section id="overview" class="space-y-6 scroll-mt-24">
        <h2 class="text-xl font-semibold tracking-tight">Overview</h2>

        <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm p-6 space-y-4">
            <div class="flex items-center justify-between">
              <h3 class="text-base font-semibold">Users</h3>
              <a href="{{ path('app_user_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">Manage →</a>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Total Users</p>
                <p class="text-3xl font-extrabold">{{ totalUsers }}</p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Admins</p>
                <p class="text-3xl font-extrabold text-indigo-700 dark:text-indigo-300">{{ totalAdmins }}</p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Instructors</p>
                <p class="text-3xl font-extrabold text-emerald-700 dark:text-emerald-300">{{ totalInstructors }}</p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Student Profiles</p>
                <p class="text-3xl font-extrabold text-sky-700 dark:text-sky-300">{{ totalStudentProfiles }}</p>
              </div>
            </div>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm p-6 space-y-4">
            <div class="flex items-center justify-between gap-3">
              <h3 class="text-base font-semibold">Courses, Subjects & Modules</h3>
              <div class="flex gap-2 text-xs whitespace-nowrap">
                <a href="{{ path('app_course_index') }}" class="text-blue-600 dark:text-blue-400 hover:underline">Courses →</a>
                <a href="{{ path('app_subject_index') }}" class="text-blue-600 dark:text-blue-400 hover:underline">Subjects →</a>
                <a href="{{ path('app_module_index') }}" class="text-blue-600 dark:text-blue-400 hover:underline">Modules →</a>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Total Courses</p>
                <p class="text-3xl font-extrabold">{{ totalCourses }}</p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Active Courses</p>
                <p class="text-3xl font-extrabold text-emerald-700 dark:text-emerald-300">{{ activeCourses }}</p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Inactive Courses</p>
                <p class="text-3xl font-extrabold text-amber-700 dark:text-amber-300">{{ inactiveCourses }}</p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Total Subjects</p>
                <p class="text-3xl font-extrabold">{{ totalSubjects }}</p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Total Modules</p>
                <p class="text-3xl font-extrabold text-purple-700 dark:text-purple-300">{{ totalModules }}</p>
              </div>
            </div>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm p-6 space-y-4">
            <div class="flex items-center justify-between">
              <h3 class="text-base font-semibold">Student Progress</h3>
              <a href="{{ path('app_student_profile_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">Manage →</a>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Ongoing</p>
                <p class="text-3xl font-extrabold text-blue-700 dark:text-blue-300">{{ ongoingStudents }}</p>
              </div>
              <div class="space-y-1">
                <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Completed</p>
                <p class="text-3xl font-extrabold text-green-700 dark:text-green-300">{{ completedStudents }}</p>
              </div>
            </div>

            <p class="text-xs text-slate-600 dark:text-gray-400">Based on Student Profiles and their current status.</p>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm p-6 space-y-4">
            <div class="flex items-center justify-between">
              <h3 class="text-base font-semibold">Enrollments</h3>
              <a href="{{ path('app_enrollment_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">Manage →</a>
            </div>

            <div class="space-y-1">
              <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Total Enrollments</p>
              <p class="text-3xl font-extrabold text-rose-700 dark:text-rose-300">{{ totalEnrollments }}</p>
            </div>

            <p class="text-xs text-slate-600 dark:text-gray-400">Total links between students and subjects/courses.</p>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm p-6 space-y-4">
            <div class="flex items-center justify-between">
              <h3 class="text-base font-semibold">Instructor Assignments</h3>
              <a href="{{ path('app_instructor_assignment_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">Manage →</a>
            </div>

            <div class="space-y-1">
              <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Total Assignments</p>
              <p class="text-3xl font-extrabold text-orange-700 dark:text-orange-300">{{ totalInstructorAssignments }}</p>
            </div>

            <p class="text-xs text-slate-600 dark:text-gray-400">Total instructor–subject links currently defined.</p>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm p-6 space-y-4">
            <div class="flex items-center justify-between">
              <h3 class="text-base font-semibold">Activity Logs</h3>
              <a href="{{ path('app_activity_log_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">View logs →</a>
            </div>

            <div class="space-y-1">
              <p class="text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">Total Activity Logs</p>
              <p class="text-3xl font-extrabold text-fuchsia-700 dark:text-fuchsia-300">{{ totalActivityLogs }}</p>
            </div>

            <p class="text-xs text-slate-600 dark:text-gray-400">Recorded actions performed by users across the system.</p>
          </div>

        </div>
      </section>

      <section id="latest" class="space-y-6 scroll-mt-24">
        <h2 class="text-xl font-semibold tracking-tight">Latest Activity</h2>

        <div class="grid gap-6 lg:grid-cols-2">

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm overflow-hidden">
            <div class="px-5 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold">Latest Users</h3>
              <a href="{{ path('app_user_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">View all</a>
            </div>
            <div class="overflow-x-auto">
              <table class="min-w-full text-sm">
                <thead class="bg-slate-50 dark:bg-gray-900">
                  <tr class="text-left text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">
                    <th class="px-5 py-2">Email</th>
                    <th class="px-5 py-2">Role</th>
                  </tr>
                </thead>
                <tbody>
                  {% for u in latestUsers %}
                    {% set allRoles = u.roles is iterable ? u.roles : [] %}
                    {% set mainRoles = allRoles|filter(r => r != 'ROLE_USER') %}
                    {% set displayRole = mainRoles is not empty ? mainRoles|join(', ') : 'ROLE_USER' %}
                    <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                      <td class="px-5 py-2">{{ u.email }}</td>
                      <td class="px-5 py-2 text-xs">{{ displayRole }}</td>
                    </tr>
                  {% else %}
                    <tr>
                      <td colspan="2" class="px-5 py-3 text-xs text-slate-500 dark:text-gray-400">No users yet.</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm overflow-hidden">
            <div class="px-5 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold">Latest Courses</h3>
              <a href="{{ path('app_course_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">View all</a>
            </div>
            <div class="overflow-x-auto">
              <table class="min-w-full text-sm">
                <thead class="bg-slate-50 dark:bg-gray-900">
                  <tr class="text-left text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">
                    <th class="px-5 py-2">Name</th>
                    <th class="px-5 py-2">Status</th>
                  </tr>
                </thead>
                <tbody>
                  {% for c in latestCourses %}
                    <tr class="border-t border-slate-100 dark:border-gray-700 hover:bg-slate-50 dark:hover:bg-gray-900">
                      <td class="px-5 py-2">{{ c.name|length > 30 ? c.name|slice(0, 30) ~ '…' : c.name }}</td>
                      <td class="px-5 py-2">
                        {% if c.isActive() %}
                          <span class="inline-flex items-center px-2 py-0.5 text-xs font-semibold rounded-full bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300">Active</span>
                        {% else %}
                          <span class="inline-flex items-center px-2 py-0.5 text-xs font-semibold rounded-full bg-gray-200 text-gray-700 dark:bg-gray-700 dark:text-gray-300">Inactive</span>
                        {% endif %}
                      </td>
                    </tr>
                  {% else %}
                    <tr>
                      <td colspan="2" class="px-5 py-3 text-xs text-slate-500 dark:text-gray-400">No courses yet.</td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>

          <div class="bg-white dark:bg-gray-800 border border-slate-200 dark:border-gray-700 rounded-2xl shadow-sm overflow-hidden">
            <div class="px-5 py-3 border-b border-slate-200 dark:border-gray-700 flex items-center justify-between">
              <h3 class="text-sm font-semibold">Latest Subjects</h3>
              <a href="{{ path('app_subject_index') }}" class="text-xs text-blue-600 dark:text-blue-400 hover:underline">View all</a>
            </div>
            <div class="overflow-x-auto">
              <table class="min-w-full text-sm">
                <thead class="bg-slate-50 dark:bg-gray-900">
                  <tr class="text-left text-xs uppercase tracking-wide text-slate-500 dark:text-gray-400">
                    <th class="px-5 py-2">Code</th>
                    <th class="px-5 py-2">Name</th>
                    <th class="px-5 py-2">Course</th>
                  </tr>
                </thead>
                <tbody>
                  {% for s in latestSubjects %}
