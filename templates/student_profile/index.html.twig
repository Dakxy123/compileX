{% extends 'base.html.twig' %}

{% block title %}Student Profiles{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = { darkMode: 'class' };
</script>

<div id="app" class="flex min-h-screen bg-slate-50 text-gray-900 dark:bg-gray-900 dark:text-gray-100">

  {# ================= SIDEBAR ================= #}
  <aside id="sidebar"
         class="fixed top-0 left-0 z-50 h-full w-64 bg-slate-800 text-white dark:bg-gray-800 transform -translate-x-full transition-transform duration-300 flex flex-col overflow-y-auto">

    <div class="px-6 py-5 border-b border-slate-700 dark:border-gray-700 flex items-center justify-between">
      <h2 class="text-xl font-semibold tracking-tight">
        {% if is_granted('ROLE_ADMIN') %}
          CompileX Admin
        {% else %}
          CompileX Instructor
        {% endif %}
      </h2>
      <button class="text-2xl md:text-3xl focus:outline-none" onclick="toggleSidebar()">×</button>
    </div>

    <nav class="flex-1 px-4 py-4 space-y-1">

      {# ===== ADMIN SIDEBAR ===== #}
      {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_admin') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Admin Dashboard
        </a>
        <a href="{{ path('app_user_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Users
        </a>
        <a href="{{ path('app_course_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Courses
        </a>

        <a href="{{ path('app_subject_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Subjects
        </a>
        <a href="{{ path('app_module_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Modules
        </a>
        <a href="{{ path('app_enrollment_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Enrollments
        </a>

        <a href="{{ path('app_instructor_assignment_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Instructor Assignments
        </a>
        <a href="{{ path('app_instructor_application_admin_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Instructor Applications
        </a>
        <a href="{{ path('app_activity_log_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Activity Logs
        </a>

        <a href="{{ path('app_student_profile_index') }}"
           class="block px-3 py-2 rounded-md font-medium bg-slate-700 dark:bg-gray-700 hover:bg-slate-600 dark:hover:bg-gray-600">
          Students
        </a>

      {# ===== INSTRUCTOR SIDEBAR ===== #}
      {% else %}
        <a href="{{ path('home') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Home
        </a>

        <a href="{{ path('app_instructor_dashboard') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Instructor Dashboard
        </a>

        <div class="mt-4 pt-3 border-t border-slate-700 dark:border-gray-600 text-xs uppercase tracking-wide text-slate-400 dark:text-gray-400">
          Global Lists (View Only)
        </div>

        <a href="{{ path('app_subject_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          All Subjects
        </a>
        <a href="{{ path('app_module_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          All Modules
        </a>
        <a href="{{ path('app_enrollment_index') }}"
           class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          All Enrollments
        </a>

        <a href="{{ path('app_student_profile_index') }}"
           class="block px-3 py-2 rounded-md font-medium bg-slate-700 dark:bg-gray-700 hover:bg-slate-600 dark:hover:bg-gray-600">
          All Students
        </a>
      {% endif %}

      <div class="pt-4 border-t border-slate-700 dark:border-gray-600 mt-4">
        <button id="mode-toggle"
                class="mt-2 block w-full text-left px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Toggle Light/Dark Mode
        </button>

        <a href="/" class="block px-3 py-2 rounded-md font-medium hover:bg-slate-700 dark:hover:bg-gray-700">
          Back to Home
        </a>

        <a href="{{ path('app_logout') }}"
           class="block px-3 py-2 rounded-md font-medium text-red-500 hover:bg-red-700">
          Logout
        </a>
      </div>

    </nav>
  </aside>

  {# ================= MAIN ================= #}
  <div class="flex-1 flex flex-col min-h-screen">
    <header class="fixed top-0 left-0 w-full z-40 bg-slate-800 text-white dark:bg-gray-800 flex items-center justify-between px-6 py-3 shadow-md">
      <h1 class="text-xl font-semibold text-blue-400 dark:text-blue-300 tracking-tight">CompileX</h1>
      <button class="text-2xl md:text-3xl focus:outline-none" aria-label="Toggle menu" onclick="toggleSidebar()">
        <span id="burger-icon">&#9776;</span>
      </button>
    </header>

    <div class="h-16"></div>

    <main id="main-content" class="flex-1 p-8 space-y-4">

      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-3">
        <div>
          <h1 class="text-3xl font-semibold">Student Profiles</h1>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
            {% if is_granted('ROLE_ADMIN') %}
              Manage students mapped to their user accounts and courses.
            {% else %}
              View student profiles (read-only).
            {% endif %}
          </p>
        </div>

        <div class="space-x-2">
          {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_student_profile_new') }}"
               class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 dark:hover:bg-blue-700">
              + New Student Profile
            </a>
            <a href="{{ path('app_student_profile_export', {
                q: q,
                courseId: courseId,
                yearLevel: yearLevel,
                status: status
            }) }}"
               class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 dark:hover:bg-green-700">
              Export CSV
            </a>
          {% endif %}
        </div>
      </div>

      {# Flash messages #}
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="px-4 py-2 rounded border
                      {% if label == 'success' %}
                        bg-green-50 border-green-200 text-green-800
                      {% elseif label == 'error' %}
                        bg-red-50 border-red-200 text-red-800
                      {% else %}
                        bg-slate-50 border-slate-200 text-slate-800
                      {% endif %}
                      text-sm">
            {{ message }}
          </div>
        {% endfor %}
      {% endfor %}

      {# Filters #}
      <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-2 mb-4">
        <div class="md:col-span-2 flex gap-2">
          <input type="text"
                 name="q"
                 value="{{ q }}"
                 placeholder="Search by user email"
                 class="px-3 py-2 border rounded w-full bg-white dark:bg-gray-700 dark:text-gray-100 text-gray-900">
        </div>

        <div>
          <select name="courseId"
                  class="w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100">
            <option value="">All Courses</option>
            {% for course in courses %}
              <option value="{{ course.id }}"
                {{ courseId is defined and courseId is not null and courseId != '' and courseId == course.id ? 'selected' : '' }}>
                {{ course.name }}
              </option>
            {% endfor %}
          </select>
        </div>

        <div class="flex gap-2">
          <select name="yearLevel"
                  class="w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100">
            <option value="">All Year Levels</option>
            {% for lvl in 1..6 %}
              <option value="{{ lvl }}"
                {{ yearLevel is defined and yearLevel is not null and yearLevel != '' and yearLevel == lvl ? 'selected' : '' }}>
                {% if lvl < 6 %}Year {{ lvl }}{% else %}Year 6+{% endif %}
              </option>
            {% endfor %}
          </select>

          <select name="status"
                  class="w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100">
            <option value="">All Status</option>
            <option value="Ongoing"   {{ status == 'Ongoing'   ? 'selected' : '' }}>Ongoing</option>
            <option value="On Leave"  {{ status == 'On Leave'  ? 'selected' : '' }}>On Leave</option>
            <option value="Completed" {{ status == 'Completed' ? 'selected' : '' }}>Completed</option>
            <option value="Dropped"   {{ status == 'Dropped'   ? 'selected' : '' }}>Dropped</option>
          </select>
        </div>

        <div class="md:col-span-4 flex justify-end">
          <button class="px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-900 dark:bg-gray-600 dark:hover:bg-gray-500">
            Apply
          </button>
        </div>
      </form>

      {# Table #}
      <table class="min-w-full border rounded shadow bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 text-sm">
        <thead>
          <tr class="bg-gray-100 dark:bg-gray-700 text-left text-xs font-semibold uppercase tracking-wide">
            <th class="px-4 py-2">ID</th>
            <th class="px-4 py-2">User Email</th>
            <th class="px-4 py-2">Course</th>
            <th class="px-4 py-2">Year Level</th>
            <th class="px-4 py-2">Status</th>
            <th class="px-4 py-2">Created</th>
            <th class="px-4 py-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for sp in studentProfiles %}
            {% set courseName = sp.course ? sp.course.name : '—' %}
            {% set courseShort = courseName|length > 35 ? courseName|slice(0, 35) ~ '…' : courseName %}

            <tr class="border-t hover:bg-gray-50 dark:hover:bg-gray-700">
              <td class="px-4 py-2">{{ sp.id }}</td>
              <td class="px-4 py-2 text-xs">{{ sp.user ? sp.user.email : '—' }}</td>
              <td class="px-4 py-2"><span title="{{ courseName }}">{{ courseShort }}</span></td>
              <td class="px-4 py-2">
                {% if sp.yearLevel < 6 %}Year {{ sp.yearLevel }}{% else %}Year 6+{% endif %}
              </td>
              <td class="px-4 py-2">{{ sp.status }}</td>
              <td class="px-4 py-2 text-xs">{{ sp.createdAt ? sp.createdAt|date('Y-m-d') : '—' }}</td>
              <td class="px-4 py-2 space-x-1">
                <a href="{{ path('app_student_profile_show', {'id': sp.id}) }}"
                   class="px-2 py-1 bg-blue-500 text-white rounded hover:bg-blue-600 dark:hover:bg-blue-700 text-xs">
                  Show
                </a>

                {% if is_granted('ROLE_ADMIN') %}
                  <a href="{{ path('app_student_profile_edit', {'id': sp.id}) }}"
                     class="px-2 py-1 bg-yellow-500 text-white rounded hover:bg-yellow-600 dark:hover:bg-yellow-700 text-xs">
                    Edit
                  </a>
                  <form method="post"
                        action="{{ path('app_student_profile_delete', {'id': sp.id}) }}"
                        class="inline-block"
                        onsubmit="return confirm('Delete this student profile?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sp.id) }}">
                    <button type="submit"
                            class="px-2 py-1 bg-red-500 text-white rounded hover:bg-red-600 dark:hover:bg-red-700 text-xs">
                      Delete
                    </button>
                  </form>
                {% endif %}
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="7" class="px-4 py-4 text-center text-sm text-gray-500 dark:text-gray-400">
                No student profiles found
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

    </main>
  </div>
</div>

<script>
const sidebar = document.getElementById('sidebar');
const burgerIcon = document.getElementById('burger-icon');

function toggleSidebar() {
  sidebar.classList.toggle('-translate-x-full');
  burgerIcon.innerHTML = sidebar.classList.contains('-translate-x-full') ? '&#9776;' : '&times;';
}

const DARK_KEY = 'compilex-dark-mode';
const modeToggle = document.getElementById('mode-toggle');

function loadInitialTheme() {
  const saved = localStorage.getItem(DARK_KEY);
  document.documentElement.classList.toggle('dark', saved === 'true');
}
if (modeToggle) {
  modeToggle.addEventListener('click', e => {
    e.stopPropagation();
    const isDark = document.documentElement.classList.contains('dark');
    document.documentElement.classList.toggle('dark', !isDark);
    localStorage.setItem(DARK_KEY, (!isDark).toString());
  });
}
loadInitialTheme();

document.addEventListener('click', e => {
  if (!sidebar.contains(e.target) &&
      !e.target.closest('button[aria-label="Toggle menu"]') &&
      !sidebar.classList.contains('-translate-x-full')) {
    toggleSidebar();
  }
});
document.addEventListener('keydown', e => {
  if (e.key === 'Escape' && !sidebar.classList.contains('-translate-x-full')) toggleSidebar();
});
</script>
{% endblock %}
