{% form_theme form 'form/_errors_tailwind.html.twig' %}

{{ form_start(form) }}

<div class="space-y-4 text-slate-900">

  <div>
    {{ form_label(form.user, 'User (Account)', {
      'label_attr': {'class': 'block text-sm font-medium mb-1'}
    }) }}
    {{ form_widget(form.user, {
      'attr': {
        'class': 'w-full px-3 py-2 border border-slate-300 rounded bg-white text-slate-900'
      }
    }) }}
    {{ form_errors(form.user) }}
  </div>

  <div>
    {{ form_label(form.course, 'Course', {
      'label_attr': {'class': 'block text-sm font-medium mb-1'}
    }) }}
    {{ form_widget(form.course, {
      'attr': {
        'class': 'w-full px-3 py-2 border border-slate-300 rounded bg-white text-slate-900'
      }
    }) }}
    {{ form_errors(form.course) }}
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      {{ form_label(form.yearLevel, 'Year Level', {
        'label_attr': {'class': 'block text-sm font-medium mb-1'}
      }) }}
      {{ form_widget(form.yearLevel, {
        'attr': {
          'class': 'w-full px-3 py-2 border border-slate-300 rounded bg-white text-slate-900'
        }
      }) }}
      {{ form_errors(form.yearLevel) }}
    </div>

    <div>
      {{ form_label(form.status, 'Status', {
        'label_attr': {'class': 'block text-sm font-medium mb-1'}
      }) }}
      {{ form_widget(form.status, {
        'attr': {
          'class': 'w-full px-3 py-2 border border-slate-300 rounded bg-white text-slate-900'
        }
      }) }}
      {{ form_errors(form.status) }}
    </div>
  </div>

</div>

<button class="mt-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
  {{ button_label|default('Save') }}
</button>

{{ form_end(form) }}
