{% extends 'base.html.twig' %}

{% block title %}Student Profile Details — Admin{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>

<div class="p-8 max-w-3xl mx-auto">

  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-semibold">Student Profile Details</h1>

    <a href="{{ path('app_student_profile_edit', {'id': studentProfile.id}) }}"
       class="px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600">
      Edit
    </a>
  </div>

  <a href="{{ path('app_student_profile_index') }}"
     class="text-blue-600 hover:underline mb-4 block">&larr; Back to list</a>

  <div class="bg-white dark:bg-gray-800 p-6 rounded shadow border border-gray-200 dark:border-gray-700 space-y-3 text-sm">

    <p><strong>ID:</strong> {{ studentProfile.id }}</p>

    <p><strong>User Email:</strong>
      {{ studentProfile.user ? studentProfile.user.email : '—' }}
    </p>

    <p><strong>Course:</strong>
      {{ studentProfile.course ? studentProfile.course.name : '—' }}
    </p>

    <p><strong>Year Level:</strong>
      {% if studentProfile.yearLevel < 6 %}
        Year {{ studentProfile.yearLevel }}
      {% else %}
        Year 6+
      {% endif %}
    </p>

    <p><strong>Status:</strong> {{ studentProfile.status }}</p>

    <p><strong>Created At:</strong>
      {{ studentProfile.createdAt ? studentProfile.createdAt|date('Y-m-d H:i:s') : '—' }}
    </p>

    <p><strong>Last Updated:</strong>
      {{ studentProfile.updatedAt ? studentProfile.updatedAt|date('Y-m-d H:i:s') : '—' }}
    </p>

    <div class="pt-4 border-t border-gray-300 dark:border-gray-700">
      {% include 'student_profile/_delete_form.html.twig' %}
    </div>
  </div>
</div>
{% endblock %}
