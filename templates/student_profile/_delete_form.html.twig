<form method="post"
      action="{{ path('app_student_profile_delete', {'id': studentProfile.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this student profile?');"
      class="inline">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ studentProfile.id) }}">
  <button type="submit"
          class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600 dark:hover:bg-red-700 text-sm">
    Delete
  </button>
</form>
