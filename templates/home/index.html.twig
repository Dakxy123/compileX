{% extends 'base.html.twig' %}

{% block title %}CompileX{% endblock %}

{% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="css/home.css" rel="stylesheet">
  <style>
    body {margin:0; font-family:'Inter',sans-serif; scroll-behavior:smooth;}
    header {
      background:#1E293B; padding:15px 20px;
      position:fixed; top:0; width:100%; z-index:1000;
      display:flex; justify-content:space-between; align-items:center;
      color:#fff;
    }
    header h1 {color:#2563EB; font-family:'Poppins',sans-serif; margin:0;}
    .menu-icon {font-size:24px; cursor:pointer;}
    .sidebar {
      position:fixed; top:0; left:-260px; width:250px; height:100%;
      background:#1E293B; color:#fff; padding:20px;
      display:flex; flex-direction:column; justify-content:space-between;
      transition:0.3s; z-index:2000;
    }
    .sidebar.active {left:0;}
    .sidebar nav {display:flex; flex-direction:column; gap:15px; margin-top:30px;}
    .sidebar nav a {color:#fff; text-decoration:none;}
    .sidebar nav a:hover {color:#2563EB;}
    .auth button {width:100%; margin:5px 0;}
    section {padding:100px 20px; min-height:100vh;}
    .hero {
      background:linear-gradient(rgba(30,41,59,0.ðŸ˜Ž,rgba(30,41,59,0.8)),url("img/hero-placeholder.png") center/cover no-repeat;
      color:#fff; display:flex; flex-direction:column; justify-content:center; align-items:center; text-align:center;
    }
    .hero h2 {font-size:2.5rem; font-family:'Poppins',sans-serif;}
    footer {background:#1E293B; color:#fff; text-align:center; padding:20px;}
    footer a {color:#2563EB; margin:0 10px; text-decoration:none;}
  </style>
{% endblock %}
{% block body %}
</head>
<body>
  <header>
    <h1>CompileX</h1>
    <span class="menu-icon" onclick="openSidebar()">&#9776;</span>
  </header>

  <!-- Sidebar -->
  <div id="sidebar" class="sidebar">
    <button class="btn-close btn-close-white align-self-end" onclick="closeSidebar()"></button>
    <h2>CompileX</h2>
    <nav>
      <a href="#hero" onclick="closeSidebar()">Home</a>
      <a href="#about" onclick="closeSidebar()">About</a>
      <a href="#courses" onclick="closeSidebar()">Courses</a>
      <a href="#team" onclick="closeSidebar()">Team</a>
      <a href="#contact" onclick="closeSidebar()">Contact</a>
    </nav>
    <div class="auth">
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#loginModal">Login</button>
      <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#signupModal">Sign Up</button>
    </div>
  </div>

  <!-- Hero -->
  <section id="hero" class="hero">
    <h2>Unlocking the Future of Learning</h2>
    <p>Compile Knowledge, Build Skills â€” A modern, tech-inspired platform for students and instructors.</p>
    <button class="btn btn-primary">Get Started</button>
  </section>

  <!-- About -->
  <section id="about" class="about text-center">
    <h2>About Us</h2>
    <p>CompileX empowers students and instructors with a modern, tech-inspired learning platform.</p>
  </section>

  <!-- Courses -->
  <section id="courses" class="courses text-center">
    <h2>Available Courses</h2>
    <input type="text" class="form-control mb-4 w-50 mx-auto" placeholder="Search Courses...">
    <div id="course-list" class="row justify-content-center">
      <div class="col-md-3 card m-2 p-2">
        <img src="img/course-placeholder.png" class="card-img-top" alt="Course">
        <div class="card-body">
          <h5 class="card-title">Course Title</h5>
          <p class="card-text">Description here...</p>
          <button class="btn btn-primary">Enroll</button>
        </div>
      </div>
    </div>
  </section>

  <!-- Team -->
  <section id="team" class="team text-center">
    <h2>Our Team</h2>
    <div id="team-list" class="row justify-content-center">
      <div class="col-md-3 card m-2 p-2">
        <img src="img/instructor-placeholder.png" class="card-img-top rounded-circle" alt="Instructor">
        <div class="card-body">
          <h5 class="card-title">Name</h5>
          <p class="card-text">Role</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section id="contact" class="contact text-center">
    <h2>Contact Us</h2>
    <form class="mx-auto" style="max-width:500px;">
      <input type="text" class="form-control mb-3" placeholder="Your Name">
      <input type="email" class="form-control mb-3" placeholder="Your Email">
      <textarea class="form-control mb-3" rows="5" placeholder="Your Message"></textarea>
      <button type="submit" class="btn btn-primary">Send</button>
    </form>
  </section>

  <!-- Footer -->
  <footer>
    <p>&copy; <span id="year">2025</span> CompileX. All Rights Reserved.</p>
    <a href="#">Terms of Service</a> | 
    <a href="#">Privacy Policy</a> | 
    <a href="#contact">Contact</a>
  </footer>

<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Login</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form>
          <input type="email" class="form-control mb-3" placeholder="Email">
          <input type="password" class="form-control mb-3" placeholder="Password">
          <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Signup Modal -->
<div class="modal fade" id="signupModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Sign Up</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form>
          <input type="text" class="form-control mb-3" placeholder="Full Name">
          <input type="email" class="form-control mb-3" placeholder="Email">
          <input type="password" class="form-control mb-3" placeholder="Password">
          <button type="submit" class="btn btn-success w-100">Create Account</button>
        </form>
      </div>
    </div>
  </div>
</div>
  <script>
    function openSidebar(){ document.getElementById("sidebar").classList.add("active"); }
    function closeSidebar(){ document.getElementById("sidebar").classList.remove("active"); }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
{% endblock %}
