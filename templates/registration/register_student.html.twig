{% extends 'base.html.twig' %}

{% block title %}Sign Up as Student â€” CompileX{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<script>
  tailwind.config = { darkMode: 'class' };
  const DARK_KEY = 'compilex-dark-mode';
  function loadInitialTheme() {
    const saved = localStorage.getItem(DARK_KEY);
    const isDark = saved === 'true';
    document.documentElement.classList.toggle('dark', isDark);
  }
  function toggleTheme() {
    const isDark = document.documentElement.classList.contains('dark');
    document.documentElement.classList.toggle('dark', !isDark);
    localStorage.setItem(DARK_KEY, (!isDark).toString());
  }
  document.addEventListener('DOMContentLoaded', loadInitialTheme);
</script>

<div class="min-h-screen flex items-center justify-center bg-slate-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100 px-4">
  <div class="w-full max-w-xl bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 relative">

    <button type="button"
            class="absolute top-4 right-4 px-2 py-1 text-xs bg-gray-200 dark:bg-gray-700 rounded hover:bg-gray-300 dark:hover:bg-gray-600"
            onclick="toggleTheme()">
      Toggle Light/Dark
    </button>

    <h1 class="text-2xl font-semibold mb-2 text-center">Sign Up as Student</h1>
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-6 text-center">
      Create your CompileX student account and start your flexible journey.
    </p>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="mb-4 px-4 py-2 rounded text-sm
                    {{ label == 'success' ? 'bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300'
                                          : 'bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300' }}">
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}

    {# Custom errors #}
    {% if errors is defined and errors is not empty %}
      <div class="mb-4 px-4 py-2 rounded text-sm bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300">
        <ul class="list-disc ml-4 space-y-1">
          {% for e in errors %}
            <li>{{ e }}</li>
          {% endfor %}
        </ul>
      </div>
    {% endif %}

    {{ form_start(form) }}

      {# Email #}
      <div class="mb-4">
        {{ form_label(form.email, 'Email', {'label_attr': {'class':'block text-sm font-medium mb-1'}}) }}
        {{ form_widget(form.email, {'attr': {
          'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100'
        }}) }}
        {% include '/form/_errors_tailwind.html.twig' with {'errors': form.email.vars.errors} %}
      </div>

      {# Password with Show/Hide #}
      <div class="mb-4">
        {{ form_label(form.password.first, 'Password', {'label_attr': {'class':'block text-sm font-medium mb-1'}}) }}
        <div class="relative">
          {{ form_widget(form.password.first, {'attr': {
            'id': 'regPassword',
            'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100 pr-16',
            'autocomplete': 'new-password'
          }}) }}
          <button type="button"
                  id="toggleRegPassword"
                  class="absolute inset-y-0 right-3 my-auto text-xs text-gray-500 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white">
            Show
          </button>
        </div>
        {% include '/form/_errors_tailwind.html.twig' with {'errors': form.password.first.vars.errors} %}
      </div>

      {# Confirm Password with Show/Hide #}
      <div class="mb-4">
        {{ form_label(form.password.second, 'Confirm Password', {'label_attr': {'class':'block text-sm font-medium mb-1'}}) }}
        <div class="relative">
          {{ form_widget(form.password.second, {'attr': {
            'id': 'regPasswordConfirm',
            'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100 pr-16',
            'autocomplete': 'new-password'
          }}) }}
          <button type="button"
                  id="toggleRegPasswordConfirm"
                  class="absolute inset-y-0 right-3 my-auto text-xs text-gray-500 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white">
            Show
          </button>
        </div>
        {% include '/form/_errors_tailwind.html.twig' with {'errors': form.password.second.vars.errors} %}
      </div>

      {# Course #}
      <div class="mb-4">
        {{ form_label(form.course, 'Course', {'label_attr': {'class':'block text-sm font-medium mb-1'}}) }}
        {{ form_widget(form.course, {'attr': {
          'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100'
        }}) }}
        {% include '/form/_errors_tailwind.html.twig' with {'errors': form.course.vars.errors} %}
      </div>

      {# Year Level #}
      <div class="mb-6">
        {{ form_label(form.yearLevel, 'Year Level', {'label_attr': {'class':'block text-sm font-medium mb-1'}}) }}
        {{ form_widget(form.yearLevel, {'attr': {
          'class': 'w-full px-3 py-2 border rounded bg-white dark:bg-gray-700 dark:text-gray-100'
        }}) }}
        {% include '/form/_errors_tailwind.html.twig' with {'errors': form.yearLevel.vars.errors} %}
      </div>

      <div class="flex items-center justify-between">
        <button type="submit"
                class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 dark:hover:bg-blue-700">
          Create Account
        </button>
        <a href="/"
           class="text-sm text-gray-600 dark:text-gray-400 hover:underline">
          Back to Home
        </a>
      </div>

    {{ form_end(form) }}
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const pwdInput = document.getElementById('regPassword');
  const pwdToggle = document.getElementById('toggleRegPassword');
  const pwdConfirmInput = document.getElementById('regPasswordConfirm');
  const pwdConfirmToggle = document.getElementById('toggleRegPasswordConfirm');

  if (pwdInput && pwdToggle) {
    pwdToggle.addEventListener('click', function () {
      const isPassword = pwdInput.type === 'password';
      pwdInput.type = isPassword ? 'text' : 'password';
      pwdToggle.textContent = isPassword ? 'Hide' : 'Show';
    });
  }

  if (pwdConfirmInput && pwdConfirmToggle) {
    pwdConfirmToggle.addEventListener('click', function () {
      const isPassword = pwdConfirmInput.type === 'password';
      pwdConfirmInput.type = isPassword ? 'text' : 'password';
      pwdConfirmToggle.textContent = isPassword ? 'Hide' : 'Show';
    });
  }
});
</script>
{% endblock %}
